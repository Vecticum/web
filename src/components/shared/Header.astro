---

import Image from "../common/Image.astro";

import headerImg from "~/assets/images/docs-img.png";

const logoImg = '~/assets/images/logo.webp';


---

<header
  class="bg-white py-2 font-semibold"
  x-data="{ isOpen: false, flyoutOpen: false, apieFlyoutOpen: false, sprendimaiOpen: false, apieOpen: false }"
>
  <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo Section -->
      <div class="md:flex md:items-center md:gap-12">
        <a class="block text-teal-600 py-2" href="/">
          <span class="sr-only">Home</span>
          <Image src={logoImg} alt="Vecticum logo" class="h-8 sm:h-12 w-fit" />
        </a>
      </div>

  <!-- Desktop Navigation -->
  <div class="hidden md:block">
    <nav aria-label="Global">
      <ul class="flex items-center gap-8 text-base">
        <li
          class="relative"
          @mouseenter="flyoutVisible = true"
          @mouseleave="flyoutVisible = false"
          x-data="{ flyoutVisible: false, activeCategory: 'Darbuotojų įdarbinimas/išdarbinimas' }"
        >
          <a
            class="text-gray-800 transition hover:text-[#C81F6A] flex items-center gap-1"
            href="/sprendimai"
            @click.stop
          >
            Sprendimai
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="transition-transform duration-300 group-hover:rotate-180"
            >
              <path d="m6 9 6 6 6-6"></path>
            </svg>
          </a>

          <!-- Flyout Menu -->
          <div
            x-show="flyoutVisible"
            x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0 scale-95"
            x-transition:enter-end="opacity-100 scale-100"
            x-transition:leave="transition ease-in duration-200"
            x-transition:leave-start="opacity-100 scale-100"
            x-transition:leave-end="opacity-0 scale-95"
            class="absolute left-0 z-20 mt-2 w-screen max-w-6xl -translate-x-1/4 transform px-4 sm:px-6 lg:px-8"
          >
            <div class="overflow-hidden rounded-xl shadow-2xl ring-1 ring-black ring-opacity-5 bg-white flex">
              <!-- Categories -->
              <div class="w-1/4 border-r border-gray-200 p-6 space-y-4">
                <template x-for="(category, index) in [
                  'Darbuotojų įdarbinimas/išdarbinimas',
                  'Atitikimo valdymas',
                  'Sutarčių valdymas',
                  'Darbuotojo informacijos valdymas',
                  'Dokumentų valdymas',
                  'Pirkimų valdymas',
                  'Darbo laiko apskaita',
                  'Apskaitomų dokumentų valdymas']" :key="index">
                  <button
                    @mouseenter="activeCategory = category"
                    class="w-full text-left text-gray-700 hover:text-[#C81F6A] text-sm font-semibold transition-colors duration-200"
                    x-text="category"
                  ></button>
                </template>
              </div>

              <!-- Solutions -->
              <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

              <div class="w-2/4 p-6">
  <div class="flex flex-col gap-4" 
       x-data="{
         icons: {
           'Atrankų valdymas': 'fa-users-line',
           'Darbuotojo įdarbinimo savitarna': 'fa-fingerprint',
           'Darbo sutarčių valdymas': 'fa-file-signature',
           'Darbo vietos paruošimas': 'fa-briefcase',
           'Bandomojo laikotarpio valdymas': 'fa-hourglass',
           'Darbuotojo išdarbinimo valdymas': 'fa-user-slash',
           'Privalomo supažindinimo su dokumentais valdymas': 'fa-file-shield',
           'Darbuotojų testavimas': 'fa-clipboard-question',
           'Mokymų valdymas': 'fa-graduation-cap',
           'Veiklos vertinimas': 'fa-chart-line',
           'Sutarčių valdymas': 'fa-folder-open',
           'Darbuotojo duomenų valdymas': 'fa-id-badge',
           'Išduodamo inventoriaus valdymas': 'fa-box-open',
           'Intranetas (Įmonės naujienos)': 'fa-newspaper',
           'Darbuotojų prašymų valdymas': 'fa-envelope-open-text',
           'Dokumentų valdymas': 'fa-file-lines',
           'Dokumentacijos plano valdymas': 'fa-clipboard-list',
           'Gaunamos/siunčiamos korespondencijos valdymas': 'fa-paper-plane',
           'Pirkimų valdymas': 'fa-cart-shopping',
           'Atostogų prašymų ir kitų nebuvimų valdymas': 'fa-umbrella-beach',
           'Komandiruočių valdymas': 'fa-plane-departure',
           'Darbo laiko apskaitos žiniaraščiai': 'fa-calendar-days',
           'Gaunamų sąskaitų valdymas': 'fa-file-invoice-dollar',
           'Avansinės apyskaitos valdymas': 'fa-receipt',
           'Kelionės lapų valdymas': 'fa-map-location-dot'
         },
         routes: {
           'Atrankų valdymas': '/atrankos-valdymas',
           'Darbuotojo įdarbinimo savitarna': '/idarbinimo-savitarna',
           'Darbo sutarčių valdymas': '/sutarciu-valdymas',
           'Darbo vietos paruošimas': '/darbo-vietos-paruosimas',
           'Bandomojo laikotarpio valdymas': '/bandomasis-laikotarpis',
           'Darbuotojo išdarbinimo valdymas': '/isdarbinimo-valdymas',
           'Privalomo supažindinimo su dokumentais valdymas': '/supazindinimo-valdymas',
           'Darbuotojų testavimas': '/testavimas',
           'Mokymų valdymas': '/mokymu-valdymas',
           'Veiklos vertinimas': '/veiklos-vertinimas',
           'Sutarčių valdymas': '/sutarciu-valdymas',
           'Darbuotojo duomenų valdymas': '/darbuotojo-duomenu-valdymas',
           'Išduodamo inventoriaus valdymas': '/inventoriaus-valdymas',
           'Intranetas (Įmonės naujienos)': '/intranetas',
           'Darbuotojų prašymų valdymas': '/prasymu-valdymas',
           'Dokumentų valdymas': '/dokumentu-valdymas',
           'Dokumentacijos plano valdymas': '/dokumentacijos-planas',
           'Gaunamos/siunčiamos korespondencijos valdymas': '/korespondencijos-valdymas',
           'Pirkimų valdymas': '/pirkimu-valdymas',
           'Atostogų prašymų ir kitų nebuvimų valdymas': '/atostogu-prasymai',
           'Komandiruočių valdymas': '/komandiruotes',
           'Darbo laiko apskaitos žiniaraščiai': '/darbo-laiko-ziniarasciai',
           'Gaunamų sąskaitų valdymas': '/saskaitu-valdymas',
           'Avansinės apyskaitos valdymas': '/avansines-apyskaitos',
           'Kelionės lapų valdymas': '/keliones-lapai'
         }
       }">
    <template x-if="activeCategory">
      <template x-for="(item, idx) in (
        activeCategory === 'Darbuotojų įdarbinimas/išdarbinimas' ? ['Atrankų valdymas', 'Darbuotojo įdarbinimo savitarna', 'Darbo sutarčių valdymas', 'Darbo vietos paruošimas', 'Bandomojo laikotarpio valdymas', 'Darbuotojo išdarbinimo valdymas'] :
        activeCategory === 'Atitikimo valdymas' ? ['Privalomo supažindinimo su dokumentais valdymas', 'Darbuotojų testavimas', 'Mokymų valdymas', 'Veiklos vertinimas'] :
        activeCategory === 'Sutarčių valdymas' ? ['Sutarčių valdymas'] :
        activeCategory === 'Darbuotojo informacijos valdymas' ? ['Darbuotojo duomenų valdymas', 'Išduodamo inventoriaus valdymas', 'Intranetas (Įmonės naujienos)', 'Darbuotojų prašymų valdymas'] :
        activeCategory === 'Dokumentų valdymas' ? ['Dokumentų valdymas', 'Dokumentacijos plano valdymas', 'Gaunamos/siunčiamos korespondencijos valdymas'] :
        activeCategory === 'Pirkimų valdymas' ? ['Pirkimų valdymas'] :
        activeCategory === 'Darbo laiko apskaita' ? ['Atostogų prašymų ir kitų nebuvimų valdymas', 'Komandiruočių valdymas', 'Darbo laiko apskaitos žiniaraščiai'] :
        activeCategory === 'Apskaitomų dokumentų valdymas' ? ['Gaunamų sąskaitų valdymas', 'Avansinės apyskaitos valdymas', 'Kelionės lapų valdymas', 'Komandiruočių valdymas'] : []
      )" :key="item">
        <a 
          :href="routes[item]" 
          class="flex items-center gap-3 hover:bg-gray-50 p-2 rounded-md transition-all duration-200 group"
        >
          <i :class="`fa-solid ${icons[item]}`" class="text-[#C81F6A] text-sm"></i>
          <span class="text-sm text-gray-700 group-hover:text-[#C81F6A]" x-text="item"></span>
        </a>
      </template>
    </template>
                </div>
              </div>

              <!-- Helpful Resource -->
              <div class="w-1/4 bg-blue-50 p-6 rounded-r-xl flex flex-col">
                <div>
                  <h3 class="text-sm font-semibold text-gray-900">Reikalinga pagalba?</h3>
                  <p class="text-sm text-gray-600 mt-2">
                    VECTICUM sistemos dokumentacija sklandžiam darbui
                  </p>
                </div>
                <div class="mt-4">
                  <Image src={headerImg} alt="Dokumentacija | VECTICUM" class="w-full rounded-lg mb-2" />
<a href="https://docs.vecticum.com/" class="hover:text-[#C81F6A] text-sm hover:underline">
  Skaityti &gt;
</a>
                </div>
              </div>
            </div>
          </div>
        </li>




            <li>
              <a
                class="text-gray-800 transition hover:text-[#C81F6A]"
                href="/planai"
              >
                Planai
              </a>
            </li>
            <li
              class="relative"
              @mouseenter="apieFlyoutOpen = true"
              @mouseleave="apieFlyoutOpen = false"
            >
              <a
                class="text-gray-800 transition hover:text-[#C81F6A] flex items-center gap-1"
                href="/apie"
              >
                Apie Vecticum
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"><path d="m6 9 6 6 6-6"></path></svg
                >
              </a>

              <!-- Apie Vecticum Flyout Menu -->
              <div
                x-show="apieFlyoutOpen"
                x-transition:enter="transition ease-out duration-200"
                x-transition:enter-start="opacity-0 -translate-y-1"
                x-transition:enter-end="opacity-100 translate-y-0"
                x-transition:leave="transition ease-in duration-150"
                x-transition:leave-start="opacity-100 translate-y-0"
                x-transition:leave-end="opacity-0 -translate-y-1"
                class="absolute left-0 z-10 mt-2 w-60 -translate-x-1/4 transform px-2 sm:px-0"
              >
                <div
                  class="overflow-hidden rounded-lg shadow-lg ring-1 ring-black ring-opacity-5"
                >
                  <div class="relative grid grid-cols-1 gap-2 bg-white p-6">
                    <div class="space-y-4">
                      <div class="space-y-2">
                        <a
                          href="/recomendations"
                          class="flex items-center gap-2 text-sm text-gray-600 hover:text-[#C81F6A]"
                        >
                          Rekomendacijos
                        </a>
                        <a
                          href="/blog"
                          class="flex items-center gap-2 text-sm text-gray-600 hover:text-[#C81F6A]"
                        >
                          Naujienos
                        </a>
                        <a
                          href="/versions"
                          class="flex items-center gap-2 text-sm text-gray-600 hover:text-[#C81F6A]"
                        >
                          Versijos
                        </a>
                        <a
                          href="/careers"
                          class="flex items-center gap-2 text-sm text-gray-600 hover:text-[#C81F6A]"
                        >
                          Karjera
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </li>
            <li>
              <a
                class="text-gray-800 transition hover:text-[#C81F6A]"
                href="/kontaktai"
              >
                Kontaktai
              </a>
            </li>
          </ul>
        </nav>
      </div>

      <div class="flex items-center gap-4">
        <!-- Desktop Login/Register -->
        <div class="sm:flex sm:gap-4 hidden">
          <a
            class="rounded-full bg-accent px-5 sm:px-8 py-2.5 sm:py-3 text-base font-medium text-white shadow"
            href="#contact"
            target="_blank"
          >
            Išbandyti
          </a>
          <a
            class="rounded-full border-2 border-accent px-5 sm:px-8 py-2.5 sm:py-3 text-base font-medium text-black shadow"
            href="https://app.vecticum.com/"
            target="_blank"
          >
            Prisijungti
          </a>
        </div>

        <!-- Mobile Menu Button -->
        <div class="block md:hidden">
          <button
            @click="isOpen = !isOpen"
            class="rounded bg-gray-100 p-2 text-gray-600 transition hover:text-gray-600/75"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="size-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile Menu Dropdown -->
  <div
    x-show="isOpen"
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0 transform -translate-y-full"
    x-transition:enter-end="opacity-100 transform translate-y-0"
    x-transition:leave="transition ease-in duration-200"
    x-transition:leave-start="opacity-100 transform translate-y-0"
    x-transition:leave-end="opacity-0 transform -translate-y-full"
    class="fixed top-0 left-0 right-0 z-50 bg-white shadow-lg md:hidden min-h-screen overflow-y-auto"
  >
    <div class="pt-20 pb-8 px-4">
      <!-- Close Button -->
      <button
        @click="isOpen = false"
        class="absolute top-4 right-4 p-2 text-gray-600"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>

      <nav class="space-y-6">
        <!-- Sprendimai Section -->
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <a href="/sprendimai" class="text-lg font-medium text-gray-900"
              >Sprendimai</a
            >
            <button
              @click="sprendimaiOpen = !sprendimaiOpen"
              class="p-1 text-gray-600"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 transition-transform duration-200"
                :class="{ 'rotate-180': sprendimaiOpen }"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
          </div>

          <div
            x-show="sprendimaiOpen"
            x-transition:enter="transition ease-out duration-200"
            x-transition:enter-start="opacity-0 transform -translate-y-2"
            x-transition:enter-end="opacity-100 transform translate-y-0"
            x-transition:leave="transition ease-in duration-150"
            x-transition:leave-start="opacity-100 transform translate-y-0"
            x-transition:leave-end="opacity-0 transform -translate-y-2"
            class="pl-4 space-y-6"
          >
            <!-- Service Categories -->
            <div class="space-y-4">
              <h3 class="text-sm font-medium text-gray-900 uppercase">
                Service Category 1
              </h3>
              <div class="space-y-2">
                <a href="/sprendimai" class="block text-sm text-gray-600"
                  >HR Knowledge Hub</a
                >
                <a href="/sprendimai" class="block text-sm text-gray-600"
                  >Blog</a
                >
              </div>
            </div>

            <div class="space-y-4">
              <h3 class="text-sm font-medium text-gray-900 uppercase">
                Service Category 2
              </h3>
              <div class="space-y-2">
                <a href="/sprendimai" class="block text-sm text-gray-600"
                  >HR Knowledge Hub</a
                >
                <a href="/sprendimai" class="block text-sm text-gray-600"
                  >Blog</a
                >
              </div>
            </div>

            <!-- Helpful Resource -->
            <div class="bg-blue-50 p-4 rounded-lg">
              <h3 class="text-sm font-medium text-gray-900">
                Helpful resource
              </h3>
              <p class="text-sm text-gray-600 mt-1">
                Workforce Pulse 2024: Solving talent and engagement challenges
              </p>
              <Image
                src={headerImg}
                alt="Workforce Pulse"
                class="w-full rounded-lg my-2"
              />
              <a href="/sprendimai" class="text-sm text-blue-600">Read report</a
              >
            </div>
          </div>
        </div>

        <!-- Planai Section -->
        <a href="/planai" class="block text-lg font-medium text-gray-900">
          Planai
        </a>

        <!-- Apie Vecticum Section -->
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <a href="/apie" class="text-lg font-medium text-gray-900"
              >Apie Vecticum</a
            >
            <button @click="apieOpen = !apieOpen" class="p-1 text-gray-600">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 transition-transform duration-200"
                :class="{ 'rotate-180': apieOpen }"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
          </div>

          <div
            x-show="apieOpen"
            x-transition:enter="transition ease-out duration-200"
            x-transition:enter-start="opacity-0 transform -translate-y-2"
            x-transition:enter-end="opacity-100 transform translate-y-0"
            x-transition:leave="transition ease-in duration-150"
            x-transition:leave-start="opacity-100 transform translate-y-0"
            x-transition:leave-end="opacity-0 transform -translate-y-2"
            class="pl-4 space-y-2"
          >
            <a href="/recomendations" class="block text-sm text-gray-600"
              >Rekomendacijos</a
            >
            <a href="/news" class="block text-sm text-gray-600">Naujienos</a>
            <a href="/versions" class="block text-sm text-gray-600">Versijos</a>
            <a href="/careers" class="block text-sm text-gray-600">Karjera</a>
          </div>
        </div>

        <!-- Kontaktai Section -->
        <a href="/kontaktai" class="block text-lg font-medium text-gray-900">
          Kontaktai
        </a>
      </nav>

      <!-- Action Buttons -->
      <div class="flex flex-col gap-4 mt-8">
        <a
          class="rounded-full bg-accent py-3 text-center text-base font-medium text-white shadow"
          href="https://app.vecticum.com/"
          target="_blank"
        >
          Išbandyti
        </a>
        <a
          class="rounded-full border-2 border-accent py-3 text-center text-base font-medium text-black shadow"
          href="https://app.vecticum.com/"
          target="_blank"
        >
          Prisijungti
        </a>
      </div>
    </div>
  </div>
</header>
