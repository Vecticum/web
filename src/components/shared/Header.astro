---

import Image from "../common/Image.astro";
const logoImg = '~/assets/images/logo.webp';
const headerImg = '~/assets/images/docs-img.png';

---

<style>
  [x-cloak] { display: none !important; }
</style>

<!-- Top Bar -->
<div class="bg-gradient-to-r from-gray-900 to-gray-800 border-b border-gray-700">
  <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8 py-1.5 sm:py-2.5">
    <div class="grid grid-cols-2 gap-x-4 gap-y-1 md:flex md:flex-row md:justify-between md:items-center md:gap-6 text-[11px] sm:text-xs text-gray-300">
      <div class="flex flex-col md:flex-row items-start md:items-center gap-1 md:gap-6 w-full md:w-auto justify-self-start">
        <a href="tel:+370 696 05332" class="hover:text-white transition-colors duration-200 flex items-center gap-2 group" aria-label="Pardavimų telefono numeris">
          <svg class="w-3.5 h-3.5 text-[#3C7099] group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
          </svg>
          <span>Pardavimai: +370 696 05332</span>
        </a>
        <span class="hidden md:inline text-gray-600">|</span>
        <a href="tel:+370 618 15140" class="hover:text-white transition-colors duration-200 flex items-center gap-2 group" aria-label="Klientų aptarnavimo telefono numeris">
          <svg class="w-3.5 h-3.5 text-[#3C7099] group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-2 0c0 .993-.241 1.929-.668 2.754l-1.524-1.525a3.997 3.997 0 00.078-2.183l1.562-1.562C15.802 8.249 16 9.1 16 10zm-5.165 3.913l1.58 1.58A5.98 5.98 0 0110 16a5.976 5.976 0 01-2.516-.552l1.562-1.562a4.006 4.006 0 001.789.027zm-4.677-2.796a4.002 4.002 0 01-.041-2.08l-.08.08-1.53-1.533A5.98 5.98 0 004 10c0 .954.223 1.856.619 2.657l1.54-1.54zm1.088-6.45A5.974 5.974 0 0110 4c.954 0 1.856.223 2.657.619l-1.54 1.54a4.002 4.002 0 00-2.346.033L7.246 4.668zM12 10a2 2 0 11-4 0 2 2 0 014 0z" clip-rule="evenodd"/>
          </svg>
          <span>Helpdesk: +370 618 15140</span>
        </a>
      </div>
      <a href="mailto:vecticum@vecticum.com" class="hover:text-white transition-colors duration-200 flex items-center gap-2 group justify-self-end md:justify-self-auto md:ml-auto" aria-label="Elektroninis paštas">
        <svg class="w-3.5 h-3.5 text-[#3C7099] group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 20 20">
          <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
          <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
        </svg>
        <span>info@vecticum.com</span>
      </a>
    </div>
  </div>
</div>


<header
  class="sticky top-0 z-50 bg-white backdrop-blur-sm bg-opacity-95 shadow-md transition-all duration-300"
  :class="{ '-translate-y-full': hideHeader, 'translate-y-0': !hideHeader, 'shadow-lg': hideHeader === false }"
  x-data="{ 
    isOpen: false, 
    flyoutOpen: false, 
    planaiFlyoutOpen: false, 
    apieFlyoutOpen: false,
    industrijosFlyoutOpen: false,
    sprendimaiOpen: false,
    apieOpen: false, 
    planaiOpen: false,
    industrijoOpen: false,
    lastScroll: 0, 
    hideHeader: false
  }"
  x-init="window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset || document.documentElement.scrollTop;
    hideHeader = currentScroll > lastScroll && currentScroll > 80;
    lastScroll = currentScroll <= 0 ? 0 : currentScroll;
  })"
>
  <div class="mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-20 items-center justify-between">
      <!-- Logo Section -->
      <div class="md:flex md:items-center md:gap-12">
        <a class="block text-teal-600 py-2 transition-transform hover:scale-105 duration-200" href="/">
          <span class="sr-only">Home</span>
          <Image src={logoImg} alt="Vecticum logo" class="h-auto w-auto !max-h-11 !max-w-[150px] !sm:max-h-12 !sm:max-w-[170px]" />
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <nav aria-label="Global">
          <ul class="flex items-center gap-1 text-sm font-medium">
            <li
              class="relative group"
              @mouseenter="flyoutVisible = true"
              @mouseleave="flyoutVisible = false"
              x-data="{ flyoutVisible: false, activeCategory: 'Personalo savitarna' }"
            >
              <a
                class="flex items-center gap-1.5 px-4 py-2 text-gray-700 rounded-lg transition-all duration-200 hover:bg-gray-50 hover:text-[#3C7099]"
                href="/sprendimai"
                @click.stop
              >
                <span class="font-semibold">Sprendimai</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="14"
                  height="14"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="transition-transform duration-200"
                  :class="{ 'rotate-180': flyoutVisible }"
                >
                  <path d="m6 9 6 6 6-6"></path>
                </svg>
              </a>

              <!-- Flyout Menu -->
              <div
                x-show="flyoutVisible"
                x-cloak
                x-transition:enter="transition ease-out duration-200"
                x-transition:enter-start="opacity-0 translate-y-2"
                x-transition:enter-end="opacity-100 translate-y-0"
                x-transition:leave="transition ease-in duration-150"
                x-transition:leave-start="opacity-100 translate-y-0"
                x-transition:leave-end="opacity-0 translate-y-2"
                class="absolute left-0 z-50 mt-3 w-screen max-w-5xl -translate-x-32 transform px-4"
                style="filter: drop-shadow(0 20px 25px rgb(0 0 0 / 0.15));"
              >
                <div class="overflow-hidden rounded-2xl bg-white border border-gray-100 flex">
                  <!-- Categories Sidebar -->
                  <div class="w-52 bg-gradient-to-br from-gray-50 to-white border-r border-gray-100 p-4">
                    <div class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-3">Kategorijos</div>
                    <div class="space-y-0.5">
                      <template x-for="(category, index) in [
                        'Personalo savitarna',
                        'Dokumentų valdymas',
                        'Sąskaitų ir pirkimų valdymas',
                        'Apskaitomų dokumentų valdymas',
                        'Turto valdymas',
                        'Sprendimų valdymas',
                      ]" :key="index">
                        <button
                          @mouseenter="activeCategory = category"
                          class="w-full text-left px-2.5 py-2 rounded-lg text-xs font-medium transition-all duration-200"
                          :class="activeCategory === category ? 'bg-white text-[#3C7099] shadow-sm' : 'text-gray-600 hover:bg-white/50 hover:text-gray-900'"
                          x-text="category"
                        ></button>
                      </template>
                    </div>
                  </div>

                  <!-- Solutions Grid -->
                  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

                  <div class="flex-1 p-5 bg-white">
                    <div 
                      class="grid gap-1.5" 
                      :class="{ 'grid-cols-2': activeCategory === 'Personalo savitarna', 'grid-cols-1': activeCategory !== 'Personalo savitarna' }"
                      x-data="{
                        icons: {
                          'Darbuotojo duomenų valdymas': 'fa-user',
                          'Intranetas (Įmonės naujienos)': 'fa-newspaper',
                          'Darbuotojų prašymų valdymas': 'fa-file-signature',
                          'Darbo sutarčių valdymas': 'fa-file-contract',
                          'Atrankų valdymas': 'fa-user-check',
                          'Darbuotojo įdarbinimo savitarna': 'fa-user-plus',
                          'Darbo vietos paruošimas': 'fa-briefcase',
                          'Bandomojo laikotarpio valdymas': 'fa-clock',
                          'Darbuotojo išdarbinimo valdymas': 'fa-user-minus',
                          'Atostogų prašymų ir kitų nebuvimų valdymas': 'fa-plane',
                          'Komandiruočių valdymas': 'fa-suitcase',
                          'Darbo laiko apskaitos žiniaraščiai': 'fa-calendar',
                          'Darbuotojų testavimas': 'fa-clipboard-check',
                          'Mokymų valdymas': 'fa-graduation-cap',
                          'Veiklos vertinimas': 'fa-chart-line',
                          'Išduodamo inventoriaus valdymas': 'fa-tools',
                          'Valdybos posėdžiai': 'fa-users',
                          'Dokumentų valdymas': 'fa-folder',
                          'Dokumentacijos plano valdymas': 'fa-file-alt',
                          'Gaunamos/siunčiamos korespondencijos valdymas': 'fa-envelope',
                          'Privalomo supažindinimo su dokumentais valdymas': 'fa-file-signature',
                          'Sutarčių valdymas': 'fa-file-contract',
                          'Užduočių valdymas': 'fa-tasks',
                          'Pirkimų valdymas': 'fa-shopping-cart',
                          'Gaunamų sąskaitų valdymas': 'fa-file-invoice',
                          'Avansinės apyskaitos valdymas': 'fa-money-check',
                          'Kelionės lapų valdymas': 'fa-ticket-alt',
                        },
                        routes: {
                          'Darbuotojo duomenų valdymas': '/darbuotoju-duomenu-bazes-valdymas',
                          'Intranetas (Įmonės naujienos)': '/intraneto-valdymas',
                          'Darbuotojų prašymų valdymas': '/darbuotoju-prasymu-valdymas',
                          'Darbo sutarčių valdymas': '/darbo-sutarciu-valdymas',
                          'Atrankų valdymas': '/atrankos-valdymas',
                          'Darbuotojo įdarbinimo savitarna': '/darbuotoju-idarbinimo-savitarna',
                          'Darbo vietos paruošimas': '/darbuotojo-idarbinimo-i-imone-valdymas',
                          'Bandomojo laikotarpio valdymas': '/bandomojo-laikotarpio-vertinimas-valdymas',
                          'Darbuotojo išdarbinimo valdymas': '/darbuotojo-isdarbinimo-is-imones-valdymas',
                          'Atostogų prašymų ir kitų nebuvimų valdymas': '/atostogu-valdymas',
                          'Komandiruočių valdymas': '/komandiruociu-valdymas',
                          'Darbo laiko apskaitos žiniaraščiai': '/darbo-grafiku-ir-darbo-laiko-apskaitos-ziniarasciu-valdymas',
                          'Darbuotojų testavimas': '/testavimo-is-norminiu-dokumentu-valdymas',
                          'Mokymų valdymas': '/mokymu-valdymas',
                          'Veiklos vertinimas': '/veiklos-vertinimas',
                          'Išduodamo inventoriaus valdymas': '/isduodamo-inventoriaus-darbuotojui-valdymas',
                          'Valdybos posėdžiai': '/valdybos-posedziu-valdymas',
                          'Dokumentų valdymas': '/dokumentu-valdymas',
                          'Dokumentacijos plano valdymas': '/dokumentacijos-plano-valdymas',
                          'Gaunamos/siunčiamos korespondencijos valdymas': '/gaunamu-uzklausu-valdymas',
                          'Privalomo supažindinimo su dokumentais valdymas': '/privalomo-supazindinimo-su-dokumentais-valdymas',
                          'Sutarčių valdymas': '/sutarciu-valdymas',
                          'Užduočių valdymas': '/uzduociu-valdymas',
                          'Pirkimų valdymas': '/pirkimu-valdymas',
                          'Gaunamų sąskaitų valdymas': '/gaunamu-saskaitu-valdymas',
                          'Avansinės apyskaitos valdymas': '/avansines-apyskaitos-valdymas',
                          'Kelionės lapų valdymas': '/keliones-lapu-valdymas',
                        }
                      }">
                      <template x-if="activeCategory">
                        <template x-for="(item, idx) in (
                          activeCategory === 'Personalo savitarna' ? [
                            'Darbuotojo duomenų valdymas',
                            'Intranetas (Įmonės naujienos)',
                            'Darbuotojų prašymų valdymas',
                            'Darbo sutarčių valdymas',
                            'Atrankų valdymas',
                            'Darbuotojo įdarbinimo savitarna',
                            'Darbo vietos paruošimas',
                            'Bandomojo laikotarpio valdymas',
                            'Darbuotojo išdarbinimo valdymas',
                            'Atostogų prašymų ir kitų nebuvimų valdymas',
                            'Komandiruočių valdymas',
                            'Darbo laiko apskaitos žiniaraščiai',
                            'Darbuotojų testavimas',
                            'Mokymų valdymas',
                            'Veiklos vertinimas'
                          ] :
                          activeCategory === 'Dokumentų valdymas' ? [
                            'Dokumentų valdymas',
                            'Dokumentacijos plano valdymas',
                            'Gaunamos/siunčiamos korespondencijos valdymas',
                            'Privalomo supažindinimo su dokumentais valdymas',
                            'Sutarčių valdymas',
                            'Užduočių valdymas'
                          ] :
                          activeCategory === 'Sąskaitų ir pirkimų valdymas' ? [
                            'Pirkimų valdymas',
                            'Gaunamų sąskaitų valdymas'
                          ] :
                          activeCategory === 'Apskaitomų dokumentų valdymas' ? [
                            'Gaunamų sąskaitų valdymas',
                            'Avansinės apyskaitos valdymas',
                            'Kelionės lapų valdymas',
                            'Komandiruočių valdymas'
                          ] :
                          activeCategory === 'Turto valdymas' ? [
                            'Išduodamo inventoriaus valdymas'
                          ] :
                          activeCategory === 'Sprendimų valdymas' ? [
                            'Valdybos posėdžiai'
                          ] : []
                        )" :key="item">
                          <a 
                            :href="routes[item]" 
                            class="flex items-center gap-2.5 px-2.5 py-2 rounded-lg transition-all duration-200 group hover:bg-blue-50 hover:shadow-sm"
                          >
                            <div class="flex-shrink-0 w-7 h-7 rounded-lg bg-blue-50 flex items-center justify-center group-hover:bg-[#3C7099] transition-colors duration-200">
                              <i :class="`fa-solid ${icons[item]}`" class="text-[#3C7099] text-xs group-hover:text-white transition-colors duration-200"></i>
                            </div>
                            <span class="text-xs font-medium text-gray-700 group-hover:text-[#3C7099] transition-colors duration-200" x-text="item"></span>
                          </a>
                        </template>
                      </template>
                    </div>
                  </div>

                  <!-- Help Section -->
                  <div class="w-60 bg-gradient-to-br from-blue-50 to-indigo-50 p-4 flex flex-col justify-between border-l border-gray-100">
                    <div>
                      <div class="inline-flex items-center justify-center w-9 h-9 rounded-full bg-[#3C7099] mb-3">
                        <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
                        </svg>
                      </div>
                      <div class="text-sm font-bold text-gray-900 mb-2">Reikalinga pagalba?</div>
                      <p class="text-xs text-gray-600 leading-relaxed mb-3">
                        VECTICUM pagalbos tarnyba padės išspręsti kiekvieną klausimą greitai ir efektyviai
                      </p>
                    </div>
                    <div>
                      <Image src={headerImg} alt="Dokumentacija | VECTICUM" class="w-full rounded-xl mb-3 shadow-sm" />
                      <a href="https://vecticum.freshdesk.com/support/home" class="inline-flex items-center gap-2 text-sm font-semibold text-[#3C7099] hover:text-[#2d5573] transition-colors group">
                        <span>Pagalbos centras</span>
                        <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </li>
            <li
              class="relative"
              @mouseenter="industrijosFlyoutOpen = true"
              @mouseleave="industrijosFlyoutOpen = false"
            >
              <a
                class="flex items-center gap-1.5 px-4 py-2 text-gray-700 rounded-lg transition-all duration-200 hover:bg-gray-50 hover:text-[#3C7099]"
              >
                <span class="font-semibold">Industrijos</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="14"
                  height="14"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="transition-transform duration-200"
                  :class="{ 'rotate-180': industrijosFlyoutOpen }"
                >
                  <path d="m6 9 6 6 6-6"></path>
                </svg>
              </a>

              <!-- Industrijos Flyout Menu -->
              <div
                x-show="industrijosFlyoutOpen"
                x-cloak
                x-transition:enter="transition ease-out duration-200"
                x-transition:enter-start="opacity-0 translate-y-2"
                x-transition:enter-end="opacity-100 translate-y-0"
                x-transition:leave="transition ease-in duration-150"
                x-transition:leave-start="opacity-100 translate-y-0"
                x-transition:leave-end="opacity-0 translate-y-2"
                class="absolute left-0 z-50 mt-3 w-80 -translate-x-1/4 transform"
                style="filter: drop-shadow(0 10px 15px rgb(0 0 0 / 0.1));"
              >
                <div class="overflow-hidden rounded-xl bg-white border border-gray-100">
                  <div class="p-4 space-y-1">
                    <a
                      href="/industrijos/gamyba"
                      class="flex items-center gap-3 px-3 py-2.5 rounded-lg text-sm font-medium text-gray-700 hover:bg-blue-50 hover:text-[#3C7099] transition-all duration-200 group"
                    >
                      <svg class="w-5 h-5 text-[#3C7099]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
                      </svg>
                      <span>Gamyba</span>
                    </a>
                    <div class="flex items-center gap-3 px-3 py-2.5 text-sm text-gray-400 cursor-not-allowed">
                      <svg class="w-5 h-5 opacity-40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                      </svg>
                      <span class="text-xs">Statyba, NT ir pastatų priežiūra <span class="text-xs opacity-60">(Ruošiama)</span></span>
                    </div>
                    <div class="flex items-center gap-3 px-3 py-2.5 text-sm text-gray-400 cursor-not-allowed">
                      <svg class="w-5 h-5 opacity-40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
                      </svg>
                      <span class="text-xs">Transportas, logistika ir sandėliavimas <span class="opacity-60">(Ruošiama)</span></span>
                    </div>
                    <div class="flex items-center gap-3 px-3 py-2.5 text-sm text-gray-400 cursor-not-allowed">
                      <svg class="w-5 h-5 opacity-40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                      </svg>
                      <span class="text-xs">Apskaitos ir personalo paslaugos <span class="opacity-60">(Ruošiama)</span></span>
                    </div>
                    <div class="flex items-center gap-3 px-3 py-2.5 text-sm text-gray-400 cursor-not-allowed">
                      <svg class="w-5 h-5 opacity-40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                      </svg>
                      <span class="text-xs">Medicina ir sveikatos priežiūra <span class="opacity-60">(Ruošiama)</span></span>
                    </div>
                    <div class="flex items-center gap-3 px-3 py-2.5 text-sm text-gray-400 cursor-not-allowed">
                      <svg class="w-5 h-5 opacity-40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      <span class="text-xs">Finansų ir draudimo sektorius <span class="opacity-60">(Ruošiama)</span></span>
                    </div>
