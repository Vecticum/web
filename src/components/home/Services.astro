<style>
.accordion-section {
  background-color: #f9fafb;
  padding: 3rem 1rem;
}
.tabs-container { max-width: 7xl; margin-left: auto; margin-right: auto; }
.tabs {
  display: flex; flex-wrap: wrap; gap: 0.5rem; justify-content: center; margin-bottom: 1.5rem;
}
.tab {
  display: flex; align-items: center; padding: 0.75rem 1.5rem;
  background-color: #fff; border: 1px solid #e5e7eb; border-radius: 9999px;
  cursor: pointer; transition: all 0.3s ease; font-size: 0.875rem; font-weight: 500;
  outline: none;
}
.tab.active, .tab:focus-visible {
  background-color: #c81f6a; color: #fff; border-color: #c81f6a; transform: translateY(-2px);
  box-shadow: 0 2px 8px #c81f6a33;
}
.tab:hover:not(.active) { background-color: #f3f4f6; }
.tab-content {}
.tab-panel { display: none; }
.tab-panel.active { display: block; animation: fadeIn .3s; }
@keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
.card {
  border-radius: 0.75rem; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
  overflow: hidden; transition: transform 0.3s, box-shadow 0.3s;
}
.card:hover { transform: translateY(-4px); box-shadow: 0 6px 16px rgba(200,31,106,0.11);}
.card img { width: 100%; height: 12rem; object-fit: cover; }
.links-grid {
  display: grid; grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 0.5rem; margin-top: 1rem;
}
.link-item { transition: background-color 0.18s, transform 0.18s; }
.link-item:focus-visible { outline: 2px solid #c81f6a; }
.link-item:hover { transform: translateY(-2px) scale(1.02); background: #c81f6a; }
@media (max-width: 640px) {
  .tabs { flex-direction: column; align-items: stretch; }
  .tab { width: 100%; text-align: left; border-radius: 0.375rem; }
  .card img { height: 10rem; }
  .links-grid { grid-template-columns: 1fr; }
}
@media (min-width: 1024px) {
  .links-grid { grid-template-columns: repeat(2, minmax(0, 1fr)); }
}
</style>
<script>
if (typeof window !== 'undefined') {
  document.addEventListener("DOMContentLoaded", function () {
    const tabs = Array.from(document.querySelectorAll(".tab")) as HTMLButtonElement[];
    const tabPanels = Array.from(document.querySelectorAll(".tab-panel")) as HTMLDivElement[];
    tabs.forEach((tab, idx) => {
      tab.addEventListener("click", () => {
        tabs.forEach((t, i) => {
          t.classList.toggle("active", t === tab);
          t.setAttribute("aria-selected", t === tab ? "true" : "false");
          t.tabIndex = t === tab ? 0 : -1;
          tabPanels[i]?.classList.toggle("active", t === tab);
        });
      });
      // Accessibility: Enable keyboard navigation (left/right arrows)
      tab.addEventListener("keydown", (e) => {
        const event = e as KeyboardEvent;
        if (event.key === "ArrowRight" || event.key === "ArrowLeft") {
          let nextIdx = (idx + (event.key === "ArrowRight" ? 1 : tabs.length - 1)) % tabs.length;
          tabs[nextIdx].focus();
        }
      });
    });
  });
}
</script>


