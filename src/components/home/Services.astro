.accordion-item.active {
  box-shadow: 0 6px 24px rgba(200, 31, 106, 0.12);
}

.accordion-header {
  display: flex;
  gap: 1rem;
  align-items: center;
  padding: 1.5rem;
  transition: background-color 0.3s ease;
}



.accordion-header span {
  font-weight: bold;
  font-size: 1.1rem;
  color: #C81F6A;
  transition: transform 0.3s ease;
}

.accordion-item.active .accordion-header span {
  transform: rotate(90deg);
}

.accordion-content {
  padding: 0 1.5rem 0 1.5rem;
  overflow: hidden;
  max-height: 0;
  opacity: 0;
  transform: translateY(-10px);
  transition: max-height 0.5s ease, opacity 0.4s ease, transform 0.4s ease;
  will-change: max-height, opacity, transform;
}

.accordion-item.active .accordion-content {
  padding: 0 1.5rem 1.5rem 1.5rem;
  opacity: 1;
  transform: translateY(0);
}

.accordion-content p {
  margin-bottom: 0.5rem;
}

.accordion-links a {
  display: inline-block;
  margin: 0.1rem 0.25rem 0.25rem 0;
  padding: 0.5rem 1rem;
  background-color: #C81F6A;
  color: white;
  text-decoration: none;
  border-radius: 8px;
  font-weight: 500;
  transition: background-color 0.2s ease, transform 0.2s ease;
  box-shadow: 0 2px 6px rgba(200, 31, 106, 0.2);
}

.accordion-links a:hover {
  background-color: #a31755;
  transform: translateY(-1px);
}

.accordion-image {
  flex: 1;
}

.accordion-image img {
  width: 100%;
  height: auto;
  border-radius: 8px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.1);
  opacity: 1;
  transform: scale(1);
  transition: opacity 0.3s ease, transform 0.3s ease;
}

.accordion-image img.fade-out {
  opacity: 0;
  transform: scale(0.95);
}

.accordion-image img.fade-in {
  opacity: 1;
  transform: scale(1);
}
</style>


<script type="module">
  document.addEventListener("DOMContentLoaded", () => {
    const items = document.querySelectorAll(".accordion-item");
    const image = document.getElementById("accordion-img");
  
    let currentTimeout;
  
    items.forEach(item => {
      const header = item.querySelector(".accordion-header");
      if (!header) return;
  
      header.addEventListener("click", () => {
        // Uždaryti kitus
        items.forEach(i => {
          const content = i.querySelector(".accordion-content");
          if (i !== item) {
            i.classList.remove("active");
            if (content) content.style.maxHeight = "0";
          }
        });
  
        const content = item.querySelector(".accordion-content");
        const isActive = item.classList.contains("active");
        item.classList.toggle("active");
  
        if (content) {
          if (isActive) {
            content.style.maxHeight = "0";
          } else {
            content.style.maxHeight = content.scrollHeight + "px";
          }
        }
  
        // Nuotraukos keitimas
        const imgUrl = item.getAttribute("data-img");
        if (imgUrl && image && image instanceof HTMLImageElement && image.src !== imgUrl) {
          image.classList.add("fade-out");
          image.classList.remove("fade-in");
  
          clearTimeout(currentTimeout);
          currentTimeout = setTimeout(() => {
            image.src = imgUrl;
            image.onload = () => {
              image.classList.remove("fade-out");
              image.classList.add("fade-in");
            };
          }, 200);
        }
      });
    });
  
    // Atidaryti aktyvų pirmą elementą, jei yra
    const firstActive = document.querySelector(".accordion-item.active .accordion-content");
    if (firstActive) {
      firstActive.style.maxHeight = firstActive.scrollHeight + "px";
    }
  });
  </script>
  
  
  
