.accordion-section {
  padding: 2rem;
  padding-bottom: 4rem;
  background-color: #EBEFF3;
  box-sizing: border-box;
}

.accordion-wrapper {
  display: flex;
  flex-direction: column;
  gap: 2rem;
  max-width: 1200px;
  margin: 0 auto;
}

@media (min-width: 768px) {
  .accordion-wrapper {
    flex-direction: row;
  }
}

.accordion {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.accordion-item {
  border-bottom: 1px solid #e5e7eb;
  border-radius: 16px;
  background-color: white; /* Pakeista į balta spalvą kaip accordion-links-container */
  cursor: pointer;
  transition: background-color 0.3s ease, box-shadow 0.3s ease;
  overflow: hidden;
  box-sizing: border-box;
  box-shadow: 0 6px 24px rgba(0,0,0,0.1); /* Pridėtas tas pats šešėlis kaip accordion-links-container */
}

.accordion-item.active {
  box-shadow: 0 6px 24px rgba(200, 31, 106, 0.12); /* Išlaikomas aktyvus šešėlis */
}

.accordion-header {
  display: flex;
  gap: 1rem;
  align-items: center;
  padding: 1.5rem;
  transition: background-color 0.3s ease;
}

.accordion-header span {
  font-weight: bold;
  font-size: 1.1rem;
  color: #C81F6A;
  transition: transform 0.3s ease;
}

.accordion-item.active .accordion-header span {
  transform: rotate(90deg);
}

.accordion-content {
  padding: 0 1.5rem;
  overflow: hidden;
  max-height: 0;
  opacity: 0;
  transform: translateY(-10px);
  transition: max-height 0.5s ease, opacity 0.4s ease, transform 0.4s ease;
}

.accordion-item.active .accordion-content {
  padding: 0 1.5rem 1.5rem;
  opacity: 1;
  transform: translateY(0);
}

.accordion-content p {
  margin-bottom: 1rem;
  color: #4B5563;
  line-height: 1.6;
  font-size: 1rem;
}

.accordion-image {
  margin-top: 1rem;
  text-align: center;
}

.accordion-image img {
  width: 100%;
  max-width: 400px;
  max-height: 250px;
  object-fit: cover;
  opacity: 1;
  transform: scale(1);
  transition: opacity 0.3s ease, transform 0.3s ease;
  display: block;
  margin: 0 auto;
}

.accordion-image img.fade-out {
  opacity: 0;
  transform: scale(0.95);
}

.accordion-image img.fade-in {
  opacity: 1;
  transform: scale(1);
}

.accordion-links-container {
  flex: 1;
  padding: 1.5rem 1.5rem 2rem; /* Padidintas apatinis tarpas */
  background-color: white;
  border-radius: 16px;
  box-shadow: 0 6px 24px rgba(0,0,0,0.1);
  height: auto;
  min-height: 150px;
  box-sizing: border-box;
  transition: height 0.3s ease;
}

.accordion-links {
