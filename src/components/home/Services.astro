  padding-bottom: 1rem;
}
.accordion-item.active {
  background-color: rgba(200, 31, 106, 0.05); /* subtilus fono atspalvis */
  border-radius: 16px;
  box-shadow: 0 4px 20px rgba(200, 31, 106, 0.08); /* minkštas šešėlis */
  padding: 24px;
  transition: all 0.3s ease;
}

.accordion-header {
  display: flex;
  gap: 1rem;
  align-items: center;
  padding: 1rem 0;
}
.accordion-content {
  display: none;
  animation: fadeIn 0.3s ease-in-out;
}
.accordion-item.active .accordion-content {
  display: block;
}
.accordion-content p {
  margin-bottom: 0.5rem;
}
.accordion-links a {
  display: inline-block;
  margin: 0.1rem 0.25rem 0.25rem 0;
  padding: 0.5rem 1rem;
  background-color: #C81F6A;
  color: white;
  text-decoration: none;
  border-radius: 8px;
  font-weight: 500;
  transition: background-color 0.2s ease, transform 0.2s ease;
}

.accordion-links a:hover {
  background-color: #a31755;
  transform: translateY(-1px);
}
.accordion-links a {
  box-shadow: 0 2px 6px rgba(200, 31, 106, 0.2);
}

.accordion-image {
  flex: 1;
}
.accordion-image img {
  width: 100%;
  height: auto;
  border-radius: 8px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.1);
}


@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-5px); }
  to { opacity: 1; transform: translateY(0); }
}
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const items = document.querySelectorAll(".accordion-item");
    const image = document.getElementById("accordion-img") as HTMLImageElement | null;

    if (!image) return; // Išvengiam klaidų, jei elementas nerastas

    items.forEach(item => {
      item.addEventListener("click", () => {
        items.forEach(i => i.classList.remove("active"));
        item.classList.add("active");

        const imgUrl = item.getAttribute("data-img");
        if (imgUrl) {
          image.src = imgUrl;
        }
      });
    });
  });
</script>
