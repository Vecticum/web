<script type="module">
  document.addEventListener("DOMContentLoaded", () => {
    const items = document.querySelectorAll(".accordion-item");
    const linksContainer = document.querySelector(".accordion-links-container");

    function updateLinksContainerHeight() {
      const activeLinks = document.querySelector(".accordion-links.active");
      if (activeLinks && linksContainer) {
        linksContainer.style.height = "auto";
        setTimeout(() => {
          linksContainer.style.height = (activeLinks.scrollHeight + 30) + "px";
        }, 0);
      } else {
        linksContainer.style.height = "150px";
      }
    }

    items.forEach((item, index) => {
      const header = item.querySelector(".accordion-header");
      const content = item.querySelector(".accordion-content");
      const image = item.querySelector(".accordion-image img");
      const linksDesktop = document.getElementById(`accordion-links-${index + 1}`);
      const linksMobile = document.getElementById(`accordion-links-mobile-${index + 1}`);

      if (!header || !content || !image || !linksDesktop || !linksMobile) return;

      header.addEventListener("click", () => {
        items.forEach((i, idx) => {
          const otherContent = i.querySelector(".accordion-content");
          const otherImage = i.querySelector(".accordion-image img");
          const otherLinksDesktop = document.getElementById(`accordion-links-${idx + 1}`);
          const otherLinksMobile = document.getElementById(`accordion-links-mobile-${idx + 1}`);

          if (i !== item) {
            i.classList.remove("active");
            otherContent.style.maxHeight = "0";
            otherImage.classList.remove("fade-in");
            otherImage.classList.add("fade-out");
            otherLinksDesktop.classList.remove("active");
            otherLinksMobile.classList.remove("active");
          }
        });

        const isActive = item.classList.contains("active");
        item.classList.toggle("active");

        if (isActive) {
          content.style.maxHeight = "0";
          image.classList.remove("fade-in");
          image.classList.add("fade-out");
          linksDesktop.classList.remove("active");
          linksMobile.classList.remove("active");
          linksContainer.style.height = "150px";
        } else {
          content.style.maxHeight = content.scrollHeight + "px";
          image.classList.remove("fade-out");
          image.classList.add("fade-in");
          linksDesktop.classList.add("active");
          linksMobile.classList.add("active");
          updateLinksContainerHeight();
        }
      });
    });

    const firstActive = document.querySelector(".accordion-item.active .accordion-content");
    if (firstActive) {
      firstActive.style.maxHeight = firstActive.scrollHeight + "px";
      const firstImage = document.querySelector(".accordion-item.active .accordion-image img");
      const firstLinksDesktop = document.getElementById("accordion-links-1");
      const firstLinksMobile = document.getElementById("accordion-links-mobile-1");
      if (firstImage) firstImage.classList.add("fade-in");
      if (firstLinksDesktop) firstLinksDesktop.classList.add("active");
      if (firstLinksMobile) firstLinksMobile.classList.add("active");
      updateLinksContainerHeight();
    }

    window.addEventListener("resize", () => {
      setTimeout(updateLinksContainerHeight, 0);
    });
  });
</script>