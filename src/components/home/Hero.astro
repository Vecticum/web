<script is:inline>
  const heroForm = document.getElementById('hero-contact-form');

  if (heroForm) {
    const emailInput = heroForm.querySelector('.hero-form-input--email');
    const submitButton = heroForm.querySelector('.hero-form-button');
    const extraFields = heroForm.querySelector('[data-hero-extra]');
    const consentSource = document.getElementById('hero-consent');
    const consentTarget = heroForm.querySelector('[data-hero-consent]');
    const responseMessage = document.getElementById('hero-response-message');
    const fieldConfigs = [
      {
        input: heroForm.querySelector('input[name="company"]'),
        error: heroForm.querySelector('[data-hero-error="company"]'),
        message: 'Prašome įvesti įmonės pavadinimą.'
      },
      {
        input: heroForm.querySelector('input[name="jobTitle"]'),
        error: heroForm.querySelector('[data-hero-error="jobTitle"]'),
        message: 'Prašome įvesti pareigas.'
      },
      {
        input: heroForm.querySelector('input[name="phone"]'),
        error: heroForm.querySelector('[data-hero-error="phone"]'),
        message: 'Prašome įvesti telefono numerį.'
      },
      {
        input: heroForm.querySelector('textarea[name="interest"]'),
        error: heroForm.querySelector('[data-hero-error="interest"]'),
        message: 'Prašome apibūdinti dominančius sprendimus.'
      }
    ];

    const hideFieldError = (config) => {
      if (!config) {
        return;
      }
      config.input?.classList.remove('is-invalid');
      config.error?.classList.remove('is-visible');
      if (config.error) {
        config.error.textContent = '';
      }
    };

    const showFieldError = (config) => {
      if (!config) {
        return;
      }
      config.input?.classList.add('is-invalid');
      if (config.error) {
        config.error.textContent = config.message;
        config.error.classList.add('is-visible');
      }
    };

    const validateExpandedFields = () => {
      let isValid = true;
      fieldConfigs.forEach((config) => {
        if (!config.input) {
          return;
        }
        const value = config.input.value.trim();
        if (value === '') {
          showFieldError(config);
          if (isValid) {
            config.input.focus();
          }
          isValid = false;
        } else {
          hideFieldError(config);
        }
      });
      return isValid;
    };

    const updateConsentValue = () => {
      if (consentTarget && consentSource) {
        consentTarget.value = consentSource.checked ? 'true' : 'false';
      }
    };

    updateConsentValue();

    if (consentSource) {
      consentSource.addEventListener('change', updateConsentValue);
    }

    if (submitButton && emailInput && extraFields) {
      submitButton.addEventListener('click', async (event) => {
        event.preventDefault();
        const isExpanded = heroForm.classList.contains('is-expanded');

        if (!isExpanded) {
          if (!emailInput.checkValidity()) {
            emailInput.reportValidity();
            return;
          }

          heroForm.classList.add('is-expanded');

          const firstExtraInput = extraFields.querySelector('input, textarea');
          if (firstExtraInput) {
            requestAnimationFrame(() => firstExtraInput.focus());
          }
        } else {
          // Form is expanded, submit the data to CRM
          if (!validateExpandedFields()) {
            return;
          }
          
          // Show loading indicator
          responseMessage.classList.remove('hidden');
          responseMessage.innerHTML = `
            <div class="bg-gray-100 border border-gray-400 text-gray-700 px-4 py-3 rounded-md shadow-lg flex items-center justify-center" role="alert">
              <svg class="animate-spin h-5 w-5 mr-2 text-gray-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
              </svg>
              <span>Apdorojama...</span>
            </div>
          `;
          
          // Disable submit button
          submitButton.disabled = true;
          
          const formData = new FormData(heroForm);
          const email = formData.get('businessEmail');
          const newsletterConsent = formData.get('newsletterConsent') === 'true';
          
          const data = {
            name: email, // Use email as name since we don't collect name
            email: email,
            company: formData.get('company') || '',
            phone: formData.get('phone') || '',
            position: formData.get('jobTitle') || '',
            message: formData.get('interest') || '',
            newsletterConsent: newsletterConsent,
            form_source: 'Leads iš pagrindinio Hero formos'
          };

          console.log('Submitting data:', data);

          try {
            const isDevelopment = window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1';
            let recaptchaToken = null;

            if (typeof grecaptcha !== 'undefined' && grecaptcha.execute) {
              try {
                recaptchaToken = await grecaptcha.execute('6LcP6_ArAAAAAGeVnrM_7mlRq2cjrC6l4Xifj0qQ', { action: 'hero_form_submit' });
              } catch (recaptchaError) {
                console.error('Hero form reCAPTCHA validation failed:', recaptchaError);
                if (!isDevelopment) {
                  responseMessage.innerHTML = `
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md shadow-lg" role="alert">
                      <div class="flex items-center justify-between">
                        <span>Saugumo patikrinimas nepavyko. Bandykite dar kartą.</span>
                        <button id="hero-close-error" class="ml-4 text-red-700 hover:text-red-900 text-xl font-bold">&times;</button>
                      </div>
                    </div>
                  `;
                  responseMessage.classList.remove('hidden');
                  submitButton.disabled = false;
                  document.getElementById('hero-close-error')?.addEventListener('click', () => {
                    responseMessage.innerHTML = '';
                    responseMessage.classList.add('hidden');
                  });
                  return;
                }
              }
            } else if (!isDevelopment) {
              console.error('Hero form reCAPTCHA not loaded');
              responseMessage.innerHTML = `
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md shadow-lg" role="alert">
                  <div class="flex items-center justify-between">
                    <span>reCAPTCHA neįkėlė tinkamai. Perkraukite puslapį ir bandykite dar kartą.</span>
                    <button id="hero-close-error" class="ml-4 text-red-700 hover:text-red-900 text-xl font-bold">&times;</button>
                  </div>
                </div>
              `;
              responseMessage.classList.remove('hidden');
              submitButton.disabled = false;
              document.getElementById('hero-close-error')?.addEventListener('click', () => {
                responseMessage.innerHTML = '';
                responseMessage.classList.add('hidden');
              });
              return;
            }

            const headers = {
              'Content-Type': 'application/json'
            };

            if (recaptchaToken) {
              headers['X-Recaptcha-Token'] = recaptchaToken;
            }

            const response = await fetch('/api/crm', {
              method: 'POST',
              headers,
              body: JSON.stringify(data)
            });

            console.log('Response status:', response.status);
            
            const text = await response.text();
            console.log('Raw response:', text);
            
            let result = {};
            if (text) {
              try {
                result = JSON.parse(text);
              } catch (parseError) {
                console.error('Failed to parse response JSON:', parseError);
                result = { message: 'Serverio atsakymo klaida' };
              }
            }
            
            console.log('Parsed result:', result);

            if (response.ok) {
              responseMessage.innerHTML = `
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-md shadow-lg" role="alert">
                  <div class="flex items-center justify-between">
                    <span>Ačiū, kad užpildėte registracijos formą! Dėl sistemos pristatymo mūsų vadybininkas su Jumis susisieks per dvi darbo dienas.</span>
                    <button id="hero-close-success" class="ml-4 text-green-700 hover:text-green-900 text-xl font-bold">&times;</button>
                  </div>
                </div>
              `;
              responseMessage.classList.remove('hidden');
              heroForm.reset();
              heroForm.classList.remove('is-expanded');
              submitButton.disabled = false;
              
              document.getElementById('hero-close-success').addEventListener('click', () => {
                responseMessage.innerHTML = '';
                responseMessage.classList.add('hidden');
              });
              
              // Scroll to message
              responseMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
            } else {
              let errorMessage = 'Įvyko klaida. Bandykite dar kartą.';
              if (result && result.message) {
                errorMessage = result.message;
              }
              responseMessage.innerHTML = `
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md shadow-lg" role="alert">
                  <div class="flex items-center justify-between">
                    <span>${errorMessage}</span>
                    <button id="hero-close-error" class="ml-4 text-red-700 hover:text-red-900 text-xl font-bold">&times;</button>
                  </div>
                </div>
              `;
              responseMessage.classList.remove('hidden');
              submitButton.disabled = false;
              
              document.getElementById('hero-close-error').addEventListener('click', () => {
                responseMessage.innerHTML = '';
                responseMessage.classList.add('hidden');
              });
            }
          } catch (error) {
            console.error('Klaida:', error);
            responseMessage.innerHTML = `
              <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md shadow-lg" role="alert">
                <div class="flex items-center justify-between">
                  <span>Įvyko klaida. Bandykite dar kartą.</span>
                  <button id="hero-close-error" class="ml-4 text-red-700 hover:text-red-900 text-xl font-bold">&times;</button>
                </div>
              </div>
            `;
            responseMessage.classList.remove('hidden');
            submitButton.disabled = false;
            
            document.getElementById('hero-close-error').addEventListener('click', () => {
              responseMessage.innerHTML = '';
              responseMessage.classList.add('hidden');
            });
          }
        }
      });

      emailInput.addEventListener('input', () => {
        if (emailInput.value.trim() === '') {
          heroForm.classList.remove('is-expanded');
        }
      });

      fieldConfigs.forEach((config) => {
        config.input?.addEventListener('input', () => hideFieldError(config));
      });
    }
  }
</script>
