    background: #ffffff;
    border: 1.5px solid rgba(200, 30, 106, 0.32);
    box-shadow: 0 14px 32px -20px rgba(15, 23, 42, 0.28);
    transition: border-color 0.2s ease, box-shadow 0.25s ease;
    --hero-form-gap: clamp(1rem, 2vw, 1.2rem);
    width: 100%;
    max-width: 100%;
  }

  @media (max-width: 640px) {
    .hero-form {
      margin-top: 2rem;
    }
  }

  .hero-form.is-expanded {
    border-color: rgba(200, 30, 106, 0.45);
    box-shadow: 0 22px 48px -24px rgba(15, 23, 42, 0.32);
  }

  .hero-form-stack {
    display: flex;
    flex-direction: column;
  }

  .hero-form-primary {
    display: flex;
    flex-direction: column;
    gap: var(--hero-form-gap);
  }

  .hero-form-input {
    flex: 1 1 auto;
    border-radius: clamp(14px, 3vw, 18px);
    border: 1px solid rgba(200, 30, 106, 0.18);
    padding: clamp(1rem, 2.5vw, 0.92rem) clamp(1.2rem, 3vw, 1.4rem);
    font-size: clamp(1rem, 2.5vw, 1rem);
    background: #ffffff;
    color: #0f172a;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
    min-height: 48px;
    width: 100%;
  }

  @media (max-width: 640px) {
    .hero-form-input {
      font-size: 16px;
    }
  }

  .hero-form-input::placeholder {
    color: rgba(107, 114, 128, 0.76);
  }

  .hero-form-input:focus {
    outline: none;
    border-color: rgba(200, 30, 106, 0.45);

  }

  .hero-form-input.is-invalid,
  .hero-form-textarea.is-invalid {
    border-color: rgba(220, 38, 38, 0.6);
    box-shadow: 0 0 0 1px rgba(248, 113, 113, 0.35);
  }

  .hero-form-error {
    display: none;
    color: #dc2626;
    font-size: 0.75rem;
    margin-top: 0.35rem;
    line-height: 1.3;
  }

  .hero-form-error.is-visible {
    display: block;
  }

  .hero-form-button {
    border-radius: 999px;
    padding: clamp(1.1rem, 2.8vw, 0.96rem) clamp(2rem, 4vw, 2.5rem);
    background: linear-gradient(120deg, #ff3c8b, #c81f6a 58%);
    color: #ffffff;
    font-weight: 600;
    font-size: clamp(1rem, 2.5vw, 1rem);
    box-shadow: 0 18px 36px -24px rgba(200, 30, 106, 0.62);
    transition: transform 0.2s ease, box-shadow 0.2s ease, opacity 0.2s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    min-height: 52px;
    margin-top: var(--hero-form-gap);
    cursor: pointer;
    border: none;
  }

  .hero-form-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  @media (min-width: 768px) {
    .hero-form-button {
      width: auto;
      min-width: clamp(9.5rem, 18vw, 12rem);
    }
  }

  .hero-form-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 24px 48px -28px rgba(200, 30, 106, 0.7);
  }

  .hero-form-button:active {
    transform: translateY(0);
  }

  .hero-form-extra {
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    transition: max-height 0.35s ease, opacity 0.3s ease, margin-top 0.3s ease;
    display: flex;
    flex-direction: column;
    gap: var(--hero-form-gap);
  }

  .hero-form.is-expanded .hero-form-extra {
    max-height: 480px;
    opacity: 1;
    margin-top: var(--hero-form-gap);
  }

  .hero-form-extra-inline {
    display: grid;
    gap: var(--hero-form-gap);
    grid-template-columns: 1fr;
  }

  .hero-form-field.hero-form-field--full {
    width: 100%;
  }

  @media (min-width: 768px) {
    .hero-form-extra-inline {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      align-items: stretch;
    }

    .hero-form-field.hero-form-field--full {
      grid-column: 1 / -1;
    }
  }

  .hero-form-textarea {
    border-radius: clamp(14px, 3vw, 18px);
    min-height: clamp(100px, 20vw, 120px);
    resize: vertical;
    padding: clamp(0.9rem, 2.5vw, 1rem) clamp(1.1rem, 2.8vw, 1.25rem);
    font-size: clamp(0.95rem, 2.3vw, 0.95rem);
    line-height: 1.5;
    border: 1px solid rgba(148, 163, 184, 0.28);
    width: 100%;
  }

  @media (max-width: 640px) {
    .hero-form-textarea {
      font-size: 16px;
      min-height: 100px;
    }
  }

  .hero-form-label {
    display: block;
    font-size: clamp(0.8rem, 2vw, 0.75rem);
    font-weight: 600;
    color: rgba(17, 24, 39, 0.68);
    margin-bottom: clamp(0.4rem, 1.5vw, 0.5rem);
  }

  @media (max-width: 640px) {
    .hero-form-label {
      font-size: 0.85rem;
    }
  }

  .hero-form-field {
    display: flex;
    flex-direction: column;
  }

  .hero-form-field .hero-form-input {
    padding: 0.9rem 1.25rem;
    border-radius: 18px;
    border-color: rgba(200, 30, 106, 0.16);
  }

  .hero-form-field--tel .hero-form-input {
    padding-left: 1.25rem;
  }

  .hero-form-field--textarea {
    width: 100%;
  }



  .hero-visual {
    position: relative;
    flex: 1 1 0;
    min-height: 420px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-ui-grid {
    display: grid;
    grid-template-columns: 260px minmax(0, 1fr);
    gap: 1.3rem;
    align-items: start;
    width: 100%;
    max-width: 660px;
  }

  .hero-ui-window {
    position: relative;
    border-radius: 20px;
    padding: 1.1rem 1.25rem;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.97), rgba(244, 247, 252, 0.95));
    border: 1px solid rgba(148, 163, 184, 0.2);
    box-shadow: 0 24px 56px -32px rgba(15, 23, 42, 0.35);
    backdrop-filter: blur(18px);
    display: flex;
    flex-direction: column;
    gap: 0.65rem;
    animation: heroCardFloat 18s ease-in-out infinite;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    width: 100%;
  }

  .hero-ui-window:hover {
    transform: translateY(-4px);
    box-shadow: 0 32px 72px -28px rgba(15, 23, 42, 0.45);
  }

  .hero-ui-window:nth-child(1) {
    grid-column: 1;
    grid-row: 1 / span 2;
    min-height: 420px;
    animation-delay: 0s;
  }

  .hero-ui-window:nth-child(2) {
    grid-column: 2;
    grid-row: 1;
    animation-delay: -4s;
  }

  .hero-ui-window:nth-child(3) {
    grid-column: 2;
    grid-row: 2;
    animation-delay: -8s;
  }

