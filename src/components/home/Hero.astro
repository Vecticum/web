<style>
  .hero {
    position: relative;
    overflow: hidden;
    background-color: #ffffff;
    color: #111827;
    max-width: 100vw;
  }

  @media (max-width: 640px) {
    .hero {
      overflow-x: hidden;
      width: 100%;
    }
  }

  .hero::before {
    content: "";
    position: absolute;
    inset: -12%;
    background: radial-gradient(520px circle at 30% 28%, rgba(241, 245, 249, 0.85), transparent 72%);
    opacity: 0.48;
    filter: blur(22px);
  }

  .hero::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    bottom: -18%;
    height: 40%;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, #ffffff 75%);
    pointer-events: none;
  }

  .hero-ambient {
    position: absolute;
    inset: -18% -10%;
    pointer-events: none;
  }

  .hero-accent {
    position: absolute;
    pointer-events: none;
    opacity: 0.88;
    mix-blend-mode: normal;
    filter: drop-shadow(0 26px 48px rgba(15, 23, 42, 0.16));
    animation: heroAccentDrift 26s ease-in-out infinite;
  }

  .hero-accent-doc {
    top: 8%;
    left: -6%;
    width: 220px;
    height: 260px;
    border-radius: 24px;
    background: linear-gradient(182deg, #ffffff 0%, #f3f4f6 100%);
    border: 1px solid rgba(148, 163, 184, 0.22);
    animation-duration: 28s;
  }

  .hero-accent-doc::before {
    content: "";
    position: absolute;
    top: 22px;
    left: 24px;
    right: 60px;
    height: 12px;
    border-radius: 999px;
    background: linear-gradient(90deg, rgba(200, 30, 106, 0.3), rgba(200, 30, 106, 0.12));
  }

  .hero-accent-doc::after {
    content: "";
    position: absolute;
    top: 56px;
    left: 24px;
    right: 24px;
    bottom: 24px;
    border-radius: 18px;
    background: repeating-linear-gradient(
      180deg,
      rgba(15, 23, 42, 0.14) 0,
      rgba(15, 23, 42, 0.14) 6px,
      transparent 6px,
      transparent 18px
    );
  }

  .hero-accent-checklist {
    bottom: -4%;
    left: 8%;
    width: 260px;
    height: 200px;
    border-radius: 28px;
    background: linear-gradient(182deg, #ffffff 0%, #eef2f7 100%);
    border: 1px solid rgba(148, 163, 184, 0.18);
    animation-duration: 32s;
    animation-direction: reverse;
  }

  .hero-accent-checklist::before {
    content: "";
    position: absolute;
    top: 32px;
    left: 32px;
    width: 18px;
    height: 18px;
    border-radius: 6px;
    border: 2px solid rgba(60, 112, 153, 0.7);
    background:
      linear-gradient(135deg, transparent 48%, rgba(60, 112, 153, 0.8) 48%, rgba(60, 112, 153, 0.8) 62%, transparent 62%);
    box-shadow:
      0 52px 0 0 rgba(60, 112, 153, 0.65),
      0 104px 0 0 rgba(60, 112, 153, 0.4);
  }

  .hero-accent-checklist::after {
    content: "";
    position: absolute;
    top: 34px;
    left: 64px;
    right: 34px;
    bottom: 34px;
    background: repeating-linear-gradient(180deg, rgba(15, 23, 42, 0.16) 0, rgba(15, 23, 42, 0.16) 1px, transparent 1px, transparent 13px);
    border-radius: 18px;
  }

  .hero-accent-flow {
    top: 26%;
    right: -8%;
    width: 200px;
    height: 320px;
    border-radius: 28px;
    background: linear-gradient(182deg, #ffffff 0%, #f2f5fb 100%);
    border: 1px solid rgba(148, 163, 184, 0.2);
    animation-duration: 30s;
  }

  .hero-accent-flow::before,
  .hero-accent-flow::after {
    content: "";
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  .hero-accent-flow::before {
    top: 40px;
    bottom: 40px;
    width: 6px;
    border-radius: 999px;
    background: linear-gradient(180deg, rgba(200, 30, 106, 0.28), rgba(60, 112, 153, 0.2));
  }

  .hero-accent-flow::after {
    top: 32px;
    width: 16px;
    height: 16px;
    border-radius: 999px;
    background: rgba(200, 30, 106, 0.85);
    box-shadow:
      0 82px 0 0 rgba(60, 112, 153, 0.85),
      0 164px 0 0 rgba(200, 30, 106, 0.75);
  }

  .hero-grid {
    position: absolute;
    inset: -6%;
    background-image:
      linear-gradient(rgba(15, 23, 42, 0.06) 1px, transparent 1px),
      linear-gradient(90deg, rgba(15, 23, 42, 0.06) 1px, transparent 1px);
    background-size: 74px 74px;
    mix-blend-mode: normal;
    opacity: 0.45;
    transform: rotate(2deg);
    animation: heroGridDrift 22s linear infinite;
  }

  .hero-blob {
    position: absolute;
    width: 420px;
    height: 420px;
    border-radius: 9999px;
    mix-blend-mode: normal;
    opacity: 0.48;
    animation: heroBlobPulse 18s ease-in-out infinite;
