---
// PricingComparison.astro
---

<section class="w-full py-20 px-6 sm:px-10 bg-gradient-to-b from-white to-[#f9f9f9] text-gray-800 font-sans">
  <div class="max-w-7xl mx-auto flex flex-col md:flex-row gap-8">
    
    <!-- 1 lygis: sprendimų pasirinkimas -->
    <aside class="w-full md:w-1/4 bg-white border border-gray-200 rounded-2xl shadow-sm p-4">
      <ul class="solution-categories space-y-2 text-sm font-medium">
        <li class="active" data-category="employee-db">💼 Darbuotojų duomenų bazės</li>
        <li data-category="contracts">📄 Darbo sutartys</li>
        <li data-category="requests">📝 Darbuotojų prašymai</li>
        <li data-category="leaves">🏖️ Atostogų prašymai</li>
        <li data-category="absences">🚫 Neatvykimai</li>
        <li data-category="sick">🤒 Ligos prašymai</li>
      </ul>
    </aside>

    <!-- 2 + 3 lygis: funkcionalumų palyginimo lentelė -->
    <div class="w-full md:w-3/4 overflow-x-auto">
      <div class="rounded-2xl shadow-xl overflow-hidden bg-white border border-gray-200">
        <table class="w-full text-sm text-left">
          <thead class="bg-[#3C7099] text-white">
            <tr style="margin-left:2rem !important;">
              <th class="p-4 text-base font-semibold">Funkcijos</th>
              <th class="p-4 text-center">Basic</th>
              <th class="p-4 text-center">Advanced</th>
              <th class="p-4 text-center">Enterprise</th>
            </tr>
          </thead>
          <tbody id="feature-table" class="divide-y divide-gray-100">
            <!-- Bus dinamiškai pildoma -->
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <style>
  .solution-categories li {
    padding: 14px 20px;
    border-radius: 10px;
    cursor: pointer;
    transition: background 0.2s ease, color 0.2s ease;
    background-color: #f3f4f6;
  }

  .solution-categories li:hover {
    background-color: #e0e7ff;
  }

  .solution-categories li.active {
    background: linear-gradient(90deg, #3C7099, #31577d);
    color: white;
    font-weight: 600;
  }

  table thead th {
  background-color: #3C7099;
  color: white;
  padding: 20px 24px;
  font-size: 1.1rem;
  font-weight: 700;
  text-align: center;
  line-height: 1.6;
}

table thead th:first-child {
  text-align: left;
}

table td {
  padding: 22px 24px;
  font-size: 1rem;
  color: #374151;
  text-align: center;
  line-height: 1.6;
  
}

table td:first-child {
  text-align: left;
  font-weight: 500;
  color: #111827;
}

table tbody tr {
  border-bottom: 1px solid #e5e7eb;
}

table tbody tr:hover {
  background-color: #f9fafb;
}

table tbody tr:last-child {
  border-bottom: none;

}


  .icon-yes {
    color: #10b981; /* emerald */
    font-size: 1.25rem;
  }

  .icon-no {
    color: #6366f1; /* indigo-500 */
    font-size: 1.25rem;
  }
</style>

  

  <script type="module">
    const data = {
      "employee-db": [
        { name: "Darbuotojo kortelės sukūrimas", plans: [true, true, true] },
        { name: "Darbinės/asmeninės informacijos talpinimas", plans: [true, true, true] },
        { name: "Darbo sutarties sąlygų talpinimas", plans: [false, true, true] },
        { name: "Pareigų istorijos peržiūra", plans: [false, false, true] },
        { name: "Struktūros sukūrimas", plans: [true, true, true] },
        { name: "Struktūros medžio peržiūra", plans: [true, true, true] },
        { name: "Struktūros filtravimas", plans: [false, true, true] },
        { name: "Eksportas į Excel", plans: [false, false, true] },
        { name: "Sąrašo filtravimas", plans: [true, true, true] },
        { name: "Filtravimas pagal dirbančius", plans: [false, true, true] }
      ],
      "contracts": [
        { name: "Sutarties peržiūra", plans: [true, true, true] },
        { name: "PDF atsisiuntimas", plans: [false, true, true] }
      ]
      // Papildyk jei reikia
    };

    const tbody = document.getElementById('feature-table');
    const tabs = document.querySelectorAll('.solution-categories li');

    function render(category) {
      tbody.innerHTML = '';
      if (!data[category]) return;
      data[category].forEach(row => {
        const tr = document.createElement('tr');
        tr.innerHTML = `
  <td class="feature-cell text-gray-700 font-medium p-2">${row.name}</td>
  ${row.plans.map(v => `<td class="feature-cell text-center">${v ? '<span class="icon-yes">✔</span>' : '<span class="icon-no">✖</span>'}</td>`).join('')}
`;
        tbody.appendChild(tr);
      });
    }

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        tabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        render(tab.getAttribute('data-category'));
      });
    });

    render('employee-db');
  </script>
</section>
