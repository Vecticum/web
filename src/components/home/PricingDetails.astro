        { name: "PDF atsisiuntimas", plans: [false, true, true] }
      ],
      "extra": [
        { name: "Sutarties peržiūra", plans: [true, true, true] },
        { name: "PDF atsisiuntimas", plans: [false, true, true] }
      ],
    };

    const tbody = document.getElementById('feature-table');
    const tabs = document.querySelectorAll('.solution-categories li');

    function render(category) {
      tbody.innerHTML = '';
      if (!data[category]) return;
      data[category].forEach(row => {
        const tr = document.createElement('tr');
        tr.innerHTML = `
  <td class="feature-cell text-gray-700 font-medium p-2">${row.name}</td>
  ${row.plans.map(v => `<td class="feature-cell text-center">${v ? '<span><i class="fas fa-check icon-yes" style="color: #22c55e;"></i></span>' : '<span><i class="fas fa-times icon-no" style="color: #ef4444;"></i></span>'}</td>`).join('')}
`;
        tbody.appendChild(tr);
      });
    }

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        tabs.forEach(t => t.classList.remove('active'));
        tab.classList.add('active');
        render(tab.getAttribute('data-category'));
      });
    });

    render('employee-db');
  </script>
</section>
