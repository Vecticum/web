---
import { getCollection } from "astro:content";
import FormattedDate from "../../components/FormattedDate.astro";
import BlogCard from "./BlogCard.astro";

const posts = (await getCollection("blog"))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 4);
---

<section
  class="bg-[#EBEFF3] py-20 flex flex-col gap-4 px-2 md:px-4 lg:px-4 xl:px-0 sm:py-8 md:py-12"
>
  <div class="mx-auto max-w-screen-xl w-full py-4">
    <div
      class="flex flex-col items-start gap-4 md:flex-row md:items-center md:justify-between"
    >
    <div class="max-w-7xl mx-auto">
      <h2 class="text-4xl sm:text-5xl font-bold text-center text-gray-900 ">Vecticum naujienos</h2>

      </div>


    </div>
  </div>
  <div
    class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 max-w-screen-xl mx-auto"
  >
    {posts.map((post) => <BlogCard post={post} />)}
  </div>

  <div class="flex items-center gap-4 justify-center">
  <a
    href="/blog"
    class="inline-flex items-center gap-1.5 rounded border border-gray-200 bg-white px-5 py-3 text-gray-900 transition hover:text-gray-700 focus:outline-none focus:ring text-base font-medium"
  >
    <span>Peržiūrėti visus įrašus</span>

    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="size-4"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="2"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
      ></path>
    </svg>
  </a>
</div>
</section>
