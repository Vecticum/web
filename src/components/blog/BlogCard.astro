---
import FormattedDate from "../FormattedDate.astro";

const { post } = Astro.props;
---

<article class="group bg-white rounded-xl shadow-md overflow-hidden transition-all hover:shadow-xl">
  <div class="aspect-video w-full overflow-hidden">
    <img
      alt={post.data.title}
      src={post.data.heroImage}
      class="w-full h-full object-cover transition group-hover:scale-105"
    />
  </div>

  <div class="p-6">
    <a href={`/naujienos/${post.id}/`}>
      <h3 class="text-xl font-semibold text-gray-900 group-hover:text-[#3C7099] transition">
        {post.data.title}
      </h3>
    </a>

    <p class="mt-3 line-clamp-3 text-sm text-gray-600 leading-relaxed">
      {post.data.description}
    </p>
  </div>
</article>
