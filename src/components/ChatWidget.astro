---
// ChatWidget.astro - AI Chat Widget component
const chatApiUrl =
  typeof import.meta.env.PUBLIC_CHATBOT_API_URL === "string"
    ? import.meta.env.PUBLIC_CHATBOT_API_URL.trim()
    : "";
---

<div id="chat-widget" class="fixed bottom-6 right-6 z-50">
  <!-- Chat Button -->
  <button
    id="chat-toggle"
    class="bg-[#3C7099] hover:bg-[#2d5573] text-white rounded-full p-4 shadow-lg transition-all duration-300 flex items-center justify-center"
    aria-label="Atidaryti pokalbi≈≥ langƒÖ"
  >
    <svg id="chat-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"></path>
    </svg>
    <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
    </svg>
  </button>

  <!-- Chat Window -->
  <div
    id="chat-window"
    class="hidden absolute bottom-20 right-0 w-96 h-[500px] bg-white rounded-2xl shadow-2xl overflow-hidden border border-gray-200"
    style="display: none;"
  >
    <div class="flex flex-col h-full">
    <!-- Header -->
    <div class="bg-gradient-to-r from-[#3C7099] to-[#2d5573] text-white p-4 flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-white rounded-full flex items-center justify-center">
          <span class="text-2xl">ü§ñ</span>
        </div>
        <div>
          <h3 class="font-semibold">VECTICUM Asistentas</h3>
          <p class="text-xs opacity-90">Visada pasiruo≈°ƒôs padƒóti</p>
        </div>
      </div>
      <button
        id="reset-chat"
        class="text-white hover:bg-white hover:bg-opacity-20 rounded-full p-2 transition-colors"
        title="Pradƒóti naujƒÖ sesijƒÖ"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
        </svg>
      </button>
    </div>

    <!-- Messages -->
    <div id="chat-messages" class="flex-1 overflow-y-auto p-4 space-y-4 bg-gray-50">
      <div class="flex gap-2">
        <div class="w-8 h-8 bg-[#3C7099] rounded-full flex items-center justify-center flex-shrink-0">
          <span class="text-white text-sm">ü§ñ</span>
        </div>
        <div class="bg-white rounded-2xl rounded-tl-none p-3 shadow-sm max-w-[80%]">
          <p class="text-sm text-gray-800">Sveiki! Prie≈° pradedant pokalbƒØ, pra≈°ome nurodyti savo el. pa≈°tƒÖ:</p>
        </div>
      </div>
    </div>

    <!-- Input -->
    <div class="p-4 bg-white border-t border-gray-200">
      <form id="chat-form" class="flex gap-2">
        <input
          type="text"
          id="chat-input"
          placeholder="ƒÆveskite ≈æinutƒô..."
          class="flex-1 px-4 py-2 border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-[#3C7099] focus:border-transparent text-sm"
          autocomplete="off"
        />
        <button
          type="submit"
          id="send-button"
          class="bg-[#3C7099] hover:bg-[#2d5573] text-white rounded-full p-2 transition-colors duration-200 flex-shrink-0 w-10 h-10 flex items-center justify-center"
          aria-label="Si≈≥sti ≈æinutƒô"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
          </svg>
        </button>
      </form>
    </div>
  </div>
</div>

<style>
  #chat-messages::-webkit-scrollbar {
    width: 6px;
  }
  #chat-messages::-webkit-scrollbar-track {
    background: #f1f1f1;
  }
  #chat-messages::-webkit-scrollbar-thumb {
    background: #888;
    border-radius: 3px;
  }
  #chat-messages::-webkit-scrollbar-thumb:hover {
    background: #555;
  }
</style>

<script is:inline define:vars={{ chatApiUrl }}>
  const chatToggle = document.getElementById('chat-toggle');
  const chatWindow = document.getElementById('chat-window');
  const chatIcon = document.getElementById('chat-icon');
  const closeIcon = document.getElementById('close-icon');
  const chatForm = document.getElementById('chat-form');
  const chatInput = document.getElementById('chat-input');
  const chatMessages = document.getElementById('chat-messages');
  const sendButton = document.getElementById('send-button');

  const API_URL_ENV = chatApiUrl;

  // Determine backend endpoint with environment + local fallbacks
  const API_URL = (() => {
    if (API_URL_ENV) {
      return API_URL_ENV;
    }
    if (window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1') {
      return 'http://localhost:3000/api/chat';
    }
    return '/api/chat';
  })();

  // Generate or retrieve session ID
  function getSessionId() {
    let sessionId = localStorage.getItem('vecticum_chat_session');
    if (!sessionId) {
      sessionId = 'session_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
      localStorage.setItem('vecticum_chat_session', sessionId);
    }
    return sessionId;
  }

  const sessionId = getSessionId();
  let isOpen = false;
  let userEmail = null;
  let isEmailVerified = false;

  // Check if email already stored for THIS session
  const storedEmailKey = `vecticum_email_${sessionId}`;
  const storedEmail = localStorage.getItem(storedEmailKey);
  if (storedEmail && validateEmail(storedEmail)) {
    userEmail = storedEmail;
    isEmailVerified = true;
  }

  // Email validation
  function validateEmail(email) {
    const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return re.test(email);
  }

  // Extract email from text
  function extractEmail(text) {
    const emailRegex = /[^\s@]+@[^\s@]+\.[^\s@]+/;
    const match = text.match(emailRegex);
    return match ? match[0] : null;
  }

  // Toggle chat window
  chatToggle?.addEventListener('click', () => {
    isOpen = !isOpen;
    if (isOpen) {
      if (chatWindow) {
        chatWindow.classList.remove('hidden');
        chatWindow.style.display = 'block';
      }
      chatIcon?.classList.add('hidden');
      closeIcon?.classList.remove('hidden');
      chatInput?.focus();
      
      // If email verified, show welcome message
      if (isEmailVerified && chatMessages) {
        const existingWelcome = chatMessages.querySelector('[data-welcome]');
        if (!existingWelcome) {
          addMessage(`Sveiki, ${userEmail}! A≈° esu VECTICUM asistentas. Kaip galiu jums padƒóti?`, false, true);
        }
      }
    } else {
      if (chatWindow) {
        chatWindow.classList.add('hidden');
        chatWindow.style.display = 'none';
      }
      chatIcon?.classList.remove('hidden');
      closeIcon?.classList.add('hidden');
    }
  });

  // Add message to chat
  function addMessage(text, isUser, isWelcome) {
    if (isWelcome === undefined) isWelcome = false;
    if (!chatMessages) return;

    const messageDiv = document.createElement('div');
    messageDiv.className = 'flex gap-2' + (isUser ? ' flex-row-reverse' : '');
    if (isWelcome) messageDiv.setAttribute('data-welcome', 'true');

    const avatar = document.createElement('div');
    avatar.className = `w-8 h-8 rounded-full flex items-center justify-center flex-shrink-0 ${
      isUser ? 'bg-[#C81F6A]' : 'bg-[#3C7099]'
    }`;
    avatar.innerHTML = `<span class="text-white text-sm">${isUser ? 'üë§' : 'ü§ñ'}</span>`;

    const bubble = document.createElement('div');
    bubble.className = `rounded-2xl p-3 shadow-sm max-w-[80%] ${
      isUser 
        ? 'bg-[#3C7099] text-white rounded-tr-none' 
        : 'bg-white rounded-tl-none'
    }`;
    
    const textP = document.createElement('p');
    textP.className = `text-sm whitespace-pre-wrap ${isUser ? 'text-white' : 'text-gray-800'}`;
    textP.textContent = text;
    
    bubble.appendChild(textP);
    messageDiv.appendChild(avatar);
    messageDiv.appendChild(bubble);
    chatMessages.appendChild(messageDiv);

    // Scroll to bottom
    chatMessages.scrollTop = chatMessages.scrollHeight;
  }

  // Show typing indicator
  function showTyping() {
    if (!chatMessages) return;

    const typingDiv = document.createElement('div');
    typingDiv.id = 'typing-indicator';
    typingDiv.className = 'flex gap-2';
    typingDiv.innerHTML = `
      <div class="w-8 h-8 bg-[#3C7099] rounded-full flex items-center justify-center flex-shrink-0">
        <span class="text-white text-sm">ü§ñ</span>
      </div>
      <div class="bg-white rounded-2xl rounded-tl-none p-3 shadow-sm">
        <div class="flex gap-1">
          <div class="w-2 h-2 bg-gray-400 rounded-full animate-bounce" style="animation-delay: 0s"></div>
          <div class="w-2 h-2 bg-gray-400 rounded-full animate-bounce" style="animation-delay: 0.2s"></div>
          <div class="w-2 h-2 bg-gray-400 rounded-full animate-bounce" style="animation-delay: 0.4s"></div>
        </div>
      </div>
    `;
    chatMessages.appendChild(typingDiv);
    chatMessages.scrollTop = chatMessages.scrollHeight;
  }

  function hideTyping() {
    const typingIndicator = document.getElementById('typing-indicator');
    if (typingIndicator) {
      typingIndicator.remove();
    }
  }

  // Handle form submission
  chatForm?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const message = chatInput.value.trim();
    if (!message) return;

    // If email not verified, validate email first
    if (!isEmailVerified) {
      const extractedEmail = extractEmail(message);
      
      if (extractedEmail && validateEmail(extractedEmail)) {
        userEmail = extractedEmail;
        isEmailVerified = true;
        // Store email with session-specific key
        localStorage.setItem(storedEmailKey, extractedEmail);
        
        addMessage(message, true);
        chatInput.value = '';
        
        // Clear initial message and show welcome
        if (chatMessages) {
          chatMessages.innerHTML = '';
        }
        addMessage(`Aƒçi≈´! El. pa≈°tas ${userEmail} patvirtintas. A≈° esu VECTICUM asistentas. Kaip galiu jums padƒóti?`, false);
        chatInput.placeholder = 'ƒÆveskite ≈æinutƒô...';
        return;
      } else {
        addMessage(message, true);
        addMessage('Pra≈°ome nurodyti teisingƒÖ el. pa≈°to adresƒÖ (pvz., jusu@email.com)', false);
        chatInput.value = '';
        return;
      }
    }

    // Normal chat flow
    addMessage(message, true);
    chatInput.value = '';

    // Disable input while processing
    chatInput.disabled = true;
      if (sendButton) sendButton.disabled = true;
    // Show typing indicator
    showTyping();

    try {
      const response = await fetch(API_URL, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ message, sessionId, userEmail }),
      });

      if (!response.ok) {
        throw new Error('Network response was not ok');
      }

      const data = await response.json();
      
      hideTyping();
      addMessage(data.reply, false);
    } catch (error) {
      console.error('Chat error:', error);
      hideTyping();
      addMessage('Atsipra≈°ome, ƒØvyko klaida. Bandykite dar kartƒÖ.', false);
    } finally {
      // Re-enable input
      chatInput.disabled = false;
      if (sendButton) sendButton.disabled = false;
      chatInput.focus();
    }
  });
</script>
