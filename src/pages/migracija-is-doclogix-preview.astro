<script>
// PIN constant
const CORRECT_PIN = "2026";

// Migration popup state and functions
const MigrationPopup = {
  isOpen: false,
  
  open() {
    this.isOpen = true;
    const popup = document.getElementById('migration-popup');
    if (popup) {
      popup.classList.remove('hidden');
      popup.classList.add('flex');
    }
  },
  
  close() {
    this.isOpen = false;
    const popup = document.getElementById('migration-popup');
    if (popup) {
      popup.classList.remove('flex');
      popup.classList.add('hidden');
    }
  }
};

// Make functions globally available
// @ts-ignore - Adding to window object for global access
window.openMigrationPopup = () => MigrationPopup.open();
// @ts-ignore - Adding to window object for global access
window.closeMigrationPopup = () => MigrationPopup.close();

document.addEventListener('DOMContentLoaded', function() {
  // Add event listeners to migration buttons
  const migrationButtons = document.querySelectorAll('[data-migration-popup]');
  migrationButtons.forEach(button => {
    button.addEventListener('click', () => MigrationPopup.open());
  });
  
  // Add event listeners to close buttons
  const closeButtons = document.querySelectorAll('[data-close-migration]');
  closeButtons.forEach(button => {
    button.addEventListener('click', () => MigrationPopup.close());
  });
  
  // Close on backdrop click
  const popup = document.getElementById('migration-popup');
  const overlay = document.getElementById('migration-overlay');
  if (popup && overlay) {
    popup.addEventListener('click', function(e) {
      // Close if clicking on the popup container itself or the overlay
      if (e.target === popup || e.target === overlay) {
        MigrationPopup.close();
      }
    });
  }
});

// PIN Authentication
const PinAuth = {
  checkAuth() {
    return sessionStorage.getItem('doclogix_preview_auth') === 'true';
  },
  
  setAuth(value: string) {
    sessionStorage.setItem('doclogix_preview_auth', value);
  },
  
  verifyPin(pin: string) {
    return pin === CORRECT_PIN;
  }
};

// Check authentication on page load
document.addEventListener('DOMContentLoaded', function() {
  const pinOverlay = document.getElementById('pin-overlay');
  const mainContent = document.getElementById('main-content');
  const pinForm = document.getElementById('pin-form');
  const pinInput = document.getElementById('pin-input');
  const pinError = document.getElementById('pin-error');
  
  // Check if already authenticated
  if (PinAuth.checkAuth()) {
    if (pinOverlay) pinOverlay.classList.add('hidden');
    if (mainContent) mainContent.classList.remove('hidden');
  }
  
  // Handle PIN form submission
  if (pinForm) {
    pinForm.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const enteredPin = (pinInput as HTMLInputElement)?.value || '';
      
      if (PinAuth.verifyPin(enteredPin)) {
        // Correct PIN
        PinAuth.setAuth('true');
        if (pinError) pinError.classList.add('hidden');
        if (pinOverlay) pinOverlay.classList.add('hidden');
        if (mainContent) mainContent.classList.remove('hidden');
      } else {
        // Wrong PIN
        if (pinError) pinError.classList.remove('hidden');
        if (pinInput) {
          pinInput.classList.add('animate-shake');
          (pinInput as HTMLInputElement).value = '';
          
          // Remove shake animation after it completes
          setTimeout(() => {
            pinInput.classList.remove('animate-shake');
          }, 500);
        }
      }
    });
  }
  
  // Allow only numbers in PIN input
  if (pinInput) {
    pinInput.addEventListener('input', function(e) {
      const target = e.target as HTMLInputElement;
      if (target) {
        const value = target.value;
        target.value = value.replace(/[^0-9]/g, '');
      }
    });
  }
});
</script>

