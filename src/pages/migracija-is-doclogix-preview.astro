<script is:inline>
document.addEventListener('DOMContentLoaded', function() {
  // Get the form and response message elements
  const migrationForm = document.getElementById('migration-form');
  const migrationSuccessMessage = document.getElementById('migration-successMessage');
  const migrationSubmitButton = document.getElementById('migration-submitButton');
  
  // Get all input elements
  const migrationNameInput = migrationForm.querySelector('#migration-name');
  const migrationPositionInput = migrationForm.querySelector('#migration-position');
  const migrationCompanyInput = migrationForm.querySelector('#migration-company');
  const migrationPhoneInput = migrationForm.querySelector('#migration-phone');
  const migrationEmailInput = migrationForm.querySelector('#migration-email');
  const migrationEmployeesInput = migrationForm.querySelector('#migration-employees');
  const migrationMessageInput = migrationForm.querySelector('#migration-message');
  const migrationConsentCheckbox = migrationForm.querySelector('#migration-consent');
  const migrationConsentField = migrationForm.querySelector('[data-newsletter-consent]');
  
  // Get error elements
  const migrationNameError = document.getElementById('migration-name-error');
  const migrationPositionError = document.getElementById('migration-position-error');
  const migrationCompanyError = document.getElementById('migration-company-error');
  const migrationPhoneError = document.getElementById('migration-phone-error');
  const migrationEmailError = document.getElementById('migration-email-error');
  const migrationMessageError = document.getElementById('migration-message-error');

  const syncMigrationConsent = () => {
    if (migrationConsentField && migrationConsentCheckbox) {
      migrationConsentField.value = migrationConsentCheckbox.checked ? 'true' : 'false';
    }
  };

  syncMigrationConsent();
  migrationConsentCheckbox?.addEventListener('change', syncMigrationConsent);

  // Function to validate form fields and show errors
  function validateMigrationForm() {
    let isValid = true;
    
    // Clear all errors
    [migrationNameError, migrationPositionError, migrationCompanyError, migrationPhoneError, migrationEmailError, migrationMessageError].forEach(error => {
      error.classList.add('hidden');
    });
    
    [migrationNameInput, migrationPositionInput, migrationCompanyInput, migrationPhoneInput, migrationEmailInput, migrationMessageInput].forEach(input => {
      input.classList.remove('border-red-500');
    });

    if (!migrationNameInput.value.trim()) {
      migrationNameInput.classList.add('border-red-500');
      migrationNameError.classList.remove('hidden');
      migrationNameError.textContent = 'Prašome įvesti vardą ir pavardę.';
      isValid = false;
    }
    
    if (!migrationPositionInput.value.trim()) {
      migrationPositionInput.classList.add('border-red-500');
      migrationPositionError.classList.remove('hidden');
      migrationPositionError.textContent = 'Prašome įvesti pareigas.';
      isValid = false;
    }
    
    if (!migrationCompanyInput.value.trim()) {
      migrationCompanyInput.classList.add('border-red-500');
      migrationCompanyError.classList.remove('hidden');
      migrationCompanyError.textContent = 'Prašome įvesti įmonės pavadinimą.';
      isValid = false;
    }
    
    if (!migrationPhoneInput.value.trim()) {
      migrationPhoneInput.classList.add('border-red-500');
      migrationPhoneError.classList.remove('hidden');
      migrationPhoneError.textContent = 'Prašome įvesti telefono numerį.';
      isValid = false;
    }
    
    if (!migrationEmailInput.value.trim()) {
      migrationEmailInput.classList.add('border-red-500');
      migrationEmailError.classList.remove('hidden');
      migrationEmailError.textContent = 'Prašome įvesti el. paštą.';
      isValid = false;
    }
    
    // migrationMessageInput yra neprivalomas, todėl nėra validacijos
    
    return isValid;
  }

  // Add an event listener for form submission
  let isMigrationSubmitting = false; // Prevent duplicate submissions
  migrationForm.addEventListener('submit', async (event) => {
    event.preventDefault();
    
    // Prevent duplicate submissions
    if (isMigrationSubmitting) {
      console.log('Migration form submission already in progress, ignoring duplicate submission');
      return;
    }
    
    isMigrationSubmitting = true;
    migrationSubmitButton.disabled = true;
    console.log('Migration form submission triggered at', new Date().toLocaleString('lt-LT', { timeZone: 'Europe/Vilnius' }));

    // Validate form only on submit
    if (!validateMigrationForm()) {
      console.log('Migration form validation failed');
      isMigrationSubmitting = false; // Reset submission state on validation failure
      migrationSubmitButton.disabled = false;
      return;
    }

    console.log('Migration form validation passed, sending data...');
    
    // Show loading indicator
    migrationSuccessMessage.classList.remove('hidden');
    migrationSuccessMessage.innerHTML = `
      <div class="bg-gray-100 border border-gray-400 text-gray-700 px-4 py-3 rounded-md shadow-lg flex items-center justify-center" role="alert">
        <svg class="animate-spin h-5 w-5 mr-2 text-gray-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
        </svg>
        <span>Apdorojama...</span>
      </div>
    `;
    migrationSubmitButton.disabled = true;

    // Collect form data
    const formData = new FormData(migrationForm);
    const data = Object.fromEntries(formData.entries());
    data.newsletterConsent = data.newsletterConsent === 'true';
    console.log('Migration form data:', data);

    try {
      const response = await fetch('/api/crm', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });

      if (!response.ok) {
        throw new Error(`HTTP error! status: ${response.status}`);
      }
      
      const text = await response.text();
      console.log('Migration form raw response:', text);
      const result = text ? JSON.parse(text) : {};
      console.log('Migration form API response:', response.status, result);

      if (response.ok) {
        migrationSuccessMessage.innerHTML = `
          <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-md shadow-lg" role="alert">
            <div class="flex items-center justify-between">
              <div>
                <span><strong>Ačiū!</strong> Jūsų migracijos užklausa gauta. Mūsų specialistas susisieks per 24 valandas dėl nemokamo konsultacijos.</span>
              </div>
              <button id="migration-closeSuccess" class="ml-4 text-green-700 hover:text-green-900 text-xl font-bold">×</button>
            </div>
          </div>
        `;
        migrationForm.reset();
        
        const closeButton = document.getElementById('migration-closeSuccess');
        closeButton.addEventListener('click', () => {
          migrationSuccessMessage.innerHTML = '';
          // Close popup after successful submission
          window.closeMigrationPopup();
        });
        
      } else {
        migrationSuccessMessage.innerHTML = `
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md shadow-lg" role="alert">
            <strong class="font-bold">Klaida!</strong> <span>${result.message || 'Įvyko klaida. Bandykite dar kartą.'}</span>
          </div>
        `;
      }
    } catch (error) {
      console.error('Error during migration form fetch:', error);
      migrationSuccessMessage.innerHTML = `
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-md shadow-lg" role="alert">
          <strong class="font-bold">Klaida!</strong> <span>${error.message}</span>
        </div>
      `;
    } finally {
      isMigrationSubmitting = false; // Reset submission state
      migrationSubmitButton.disabled = false;
      console.log('Migration form submission process completed at', new Date().toLocaleString('lt-LT', { timeZone: 'Europe/Vilnius' }));
    }
  });

  // Add input event listeners to clear errors on change
  [migrationNameInput, migrationPositionInput, migrationCompanyInput, migrationPhoneInput, migrationEmailInput].forEach(input => {
    input.addEventListener('input', () => {
      if (input.value.trim()) {
        input.classList.remove('border-red-500');
        const errorElement = document.getElementById(`${input.id}-error`);
        if (errorElement) {
          errorElement.textContent = '';
        }
      }
    });
  });

  // Add separate listener for optional message field
  migrationMessageInput.addEventListener('input', () => {
    // Always clear red border for optional field
    migrationMessageInput.classList.remove('border-red-500');
    migrationMessageError.textContent = '';
  });

}); // Close DOMContentLoaded event listener
</script>

