<!-- Custom CSS for enhanced design system -->
<style>
  :root {
    --brand-primary: theme('colors.primary.500');
    --brand-secondary: theme('colors.secondary.500');
    --brand-accent: theme('colors.accent.500');
    --font-heading: theme('fontFamily.heading');
    --font-body: theme('fontFamily.body');
    --radius: theme('borderRadius.card');
    --shadow-sm: theme('boxShadow.card');
    --shadow-md: theme('boxShadow.card-hover');
    --shadow-lg: theme('boxShadow.button-hover');
  }
  
  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }
  
  /* Enhanced focus styles for accessibility */
  .focus-visible:focus-visible {
    outline: 2px solid var(--brand-accent);
    outline-offset: 2px;
  }
  
  /* Button system */
  .btn-primary {
    @apply bg-accent hover:bg-accent-600 text-white font-semibold py-4 px-8 rounded-full shadow-button hover:shadow-button-hover transition-all duration-150 focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2;
    min-height: 44px; /* Accessibility touch target */
  }
  
  .btn-secondary {
    @apply bg-secondary hover:bg-secondary-600 text-white font-semibold py-4 px-8 rounded-full shadow-button hover:shadow-button-hover transition-all duration-150 focus-visible:ring-2 focus-visible:ring-secondary focus-visible:ring-offset-2;
    min-height: 44px;
  }
  
  .btn-ghost {
    @apply border-2 border-secondary text-secondary hover:bg-secondary hover:text-white font-semibold py-4 px-8 rounded-full transition-all duration-150 focus-visible:ring-2 focus-visible:ring-secondary focus-visible:ring-offset-2;
    min-height: 44px;
  }
  
  .btn-white {
    @apply bg-white text-accent hover:bg-gray-100 font-semibold py-4 px-8 rounded-full shadow-button hover:shadow-button-hover transition-all duration-150 focus-visible:ring-2 focus-visible:ring-accent focus-visible:ring-offset-2;
    min-height: 44px;
  }
  
  .btn-white-ghost {
    @apply bg-white/10 hover:bg-white/20 text-white border border-white/30 font-semibold py-4 px-8 rounded-full transition-all duration-150 focus-visible:ring-2 focus-visible:ring-white focus-visible:ring-offset-2;
    min-height: 44px;
  }
  
  /* Card system */
  .card {
    @apply bg-white rounded-card border border-gray-100 shadow-card transition-all duration-150;
  }
  
  .card-interactive {
    @apply card hover:shadow-card-hover hover:-translate-y-1 cursor-pointer;
  }
  
  .card-content {
    @apply p-6 md:p-8;
  }
  
  /* Typography system */
  .heading-display {
    @apply text-4xl md:text-5xl xl:text-6xl font-bold tracking-tight leading-tight;
  }
  
  .heading-1 {
    @apply text-3xl md:text-4xl xl:text-5xl font-bold tracking-tight leading-tight;
  }
  
  .heading-2 {
    @apply text-2xl md:text-3xl font-semibold leading-snug;
  }
  
  .heading-3 {
    @apply text-xl md:text-2xl font-semibold leading-normal;
  }
  
  .body-large {
    @apply text-lg md:text-xl leading-relaxed;
  }
  
  .body-base {
    @apply text-base leading-7;
  }
  
  .body-small {
    @apply text-sm text-muted leading-6;
  }
  
  /* Layout system */
  .container-fluid {
    @apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8;
  }
  
  .section-padding {
    @apply py-16 md:py-20;
  }
  
  .section-padding-lg {
    @apply py-20 md:py-24;
  }
</style>

