---
import { getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";

const versions = await getCollection("versions");

export const prerender = true;
---

<MainLayout>
  <div class="w-full py-8 sm:py-16 md:py-20">
    <h1
      class="mt-2 w-full text-center text-4xl font-semibold tracking-normal text-balance text-gray-950 sm:text-5xl"
    >
      Versions
    </h1>
    <p class="mt-4 text-center text-lg text-gray-600">
      Explore the different versions of our product.
    </p>
  </div>
  <div
    class="space-y-8 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-8 sm:mb-16 md:mb-20"
  >
    {
      versions.map((version) => (
        <div class="border group flex flex-col sm:gap-4 border-gray-200 rounded-lg p-4 bg-white-100 justify-center items-center gap-2 shadow-md">
          <h2 class="text-xl font-semibold text-gray-950">
            {version.data.version}
          </h2>
          <p class="text-sm text-gray-600">
            Released on: {version.data.releaseDate.toDateString()}
          </p>
          <p class="mt-2 text-sm text-gray-600">{version.data.description}</p>
          <a
            href={`/versions/${version.id}`}
            class="mt-4 inline-block rounded-md bg-accent px-5 py-2.5 text-base font-medium text-white shadow"
          >
            View Details
          </a>
        </div>
      ))
    }
  </div>
</MainLayout>
