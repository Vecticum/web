---
import { getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";

const careers = await getCollection("careers");

export const prerender = true;
---

<MainLayout>

      <!-- Hero -->
  <section class="text-center py-20 px-6 bg-gradient-to-b from-white to-[#f4f7fa]">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">Karjera</h1>
      <p class="text-lg text-gray-600">
        Prisijunk prie mūsų komandos – peržiūrėk šiuo metu siūlomas pozicijas.
      </p>
    </div>
  </section>

  <div
    class="space-y-8 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-8 sm:mb-16 md:mb-20 mt-12"
  >
    {
      careers.map((career) => (
        <div class="border group flex flex-col sm:gap-4 border-gray-200 rounded-lg p-4 bg-white justify-center items-center gap-2 shadow-md">
          <h2 class="text-xl font-semibold text-gray-950">
            {career.data.title}
          </h2>
          <p class="text-sm text-gray-600">
            Lokacija: {career.data.location}
          </p>
          <p class="mt-2 text-sm text-gray-600">{career.data.description}</p>
          <a
            href={career.data.applyLink}
            class="mt-4 inline-block rounded-md bg-accent px-5 py-2.5 text-base font-medium text-white shadow"
          >
            Kandidatuoti
          </a>
        </div>
      ))
    }
  </div>
</MainLayout>
