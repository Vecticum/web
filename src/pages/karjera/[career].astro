---
import { getCollection, render } from 'astro:content';
import MainLayout from '../../layouts/MainLayout.astro';

// Eksportuojame getStaticPaths funkciją, kuri generuoja dinaminius puslapius
export async function getStaticPaths() {
  const careers = await getCollection('careers');
  return careers.map((career) => ({
    params: { career: career.id },
    props: { career },
  }));
}

// Gauname career parametrą iš Astro.params ir props
const { career } = Astro.params;
const { career: careerData } = Astro.props;

// Patikriname, ar careerData egzistuoja
if (!careerData) {
  throw new Error(`Karjera su ID ${career} nerasta.`);
}

// Markdown turinio atvaizdavimas
const { title, description, location, meta } = careerData.data;
const { Content } = await render(careerData);
---

<MainLayout title={meta.title} description={meta.description}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 via-white to-indigo-50 py-16 lg:py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <!-- Breadcrumb -->
        <nav class="flex justify-center mb-6" aria-label="Breadcrumb">
          <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
              <a href="/" class="text-gray-500 hover:text-gray-700 text-sm font-medium">Pradžia</a>
            </li>
            <li>
              <div class="flex items-center">
                <svg class="w-4 h-4 text-gray-400 mx-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
                <a href="/karjera" class="text-gray-500 hover:text-gray-700 text-sm font-medium">Karjera</a>
              </div>
            </li>
            <li>
              <div class="flex items-center">
                <svg class="w-4 h-4 text-gray-400 mx-1" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-900 text-sm font-medium">{title}</span>
              </div>
            </li>
          </ol>
        </nav>

        <!-- Title and Description -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
          {title}
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-3xl mx-auto leading-relaxed">
          {description}
        </p>

        <!-- Location and CTA Section -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-center sm:gap-6 items-center">
          <!-- Location Badge -->
          <div class="inline-flex items-center px-4 py-2 bg-white rounded-full shadow-sm border border-gray-200 mb-4 sm:mb-0">
            <svg class="w-5 h-5 mr-2 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.828 0l-4.243-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span class="text-gray-700 font-medium">{location}</span>
          </div>

          <!-- CTA Button -->
          <a
            href="mailto:info@vecticum.com"
            class="inline-flex items-center rounded-full bg-secondary px-8 py-4 text-base font-medium text-white shadow hover:bg-secondary/90 transition-colors"
          >
            <span>Apply now</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Content Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Content -->
      <div class="prose prose-xl prose-gray max-w-none prose-headings:text-gray-900 prose-headings:font-bold prose-headings:tracking-tight prose-h2:text-3xl prose-h2:mt-12 prose-h2:mb-6 prose-p:text-gray-600 prose-p:leading-relaxed prose-li:text-gray-600 prose-li:leading-relaxed prose-strong:text-gray-900">
        <Content />
      </div>

      <!-- Bottom CTA Section -->
      <div class="mt-16 pt-12 border-t border-gray-200">
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl p-8 md:p-12 text-center">
          <h3 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">
            Are you Interested?
          </h3>
          <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
            If you have any questions about the role or want to apply contact us at info@vecticum.com
          </p>
          <a
            href="mailto:info@vecticum.com"
            class="inline-flex items-center rounded-full bg-secondary px-8 py-4 text-base font-medium text-white shadow hover:bg-secondary/90 transition-colors"
          >
            <span>Apply for this position</span>
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>