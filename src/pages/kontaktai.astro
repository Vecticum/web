---
import MainLayout from "../layouts/MainLayout.astro";
import SimpleContactForm from "../components/home/SimpleContactForm.astro";


const seoTitle = "Kontaktai | VECTICUM";
const seoDescription = "Susisiekite su VECTICUM komanda. Konsultacija, demonstracija ar bendradarbiavimas. Mes pasiruošę padėti.";
const seoImage = "/path/to/seo-image.jpg"; // Optional
---

<MainLayout title={seoTitle} description={seoDescription} image={seoImage}>

  <!-- Hero -->
  <section class="text-center py-20 px-6 bg-gradient-to-b from-white to-[#f4f7fa]">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">Kontaktai</h1>
      <p class="text-lg text-gray-600">
        Susisiekite su VECTICUM komanda dėl demonstracijos, konsultacijos ar bendradarbiavimo
      </p>
    </div>
  </section>

  <!-- Kontaktų turinys -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-white">
    <div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12">

      <!-- Kontaktinė informacija -->
      <div class="bg-gray-50 p-8 rounded-2xl shadow-md space-y-6">
        <h2 class="text-2xl font-semibold text-gray-900 mb-4">Kontaktinė informacija</h2>
        <div class="space-y-3 text-gray-700 text-base">
          <p><strong>Įmonė:</strong> UAB "Vecticum"</p>
          <p><strong>Įmonės kodas:</strong> 304867945</p>
          <p><strong>Adresas:</strong> T. Kosciuškos g. 24, Vilnius, Lietuva 01100</p>
          <p>
            <strong>El. paštas:</strong>
            <a href="mailto:info@vecticum.com" class="text-[#C81F6A] hover:underline ml-1">info@vecticum.lt</a>
          </p>
          <p>
            <strong>Telefonas:</strong>
            <a href="tel:+37061187705" class="text-[#C81F6A] hover:underline ml-1">+370 696 05332</a>
          </p>
        </div>
      </div>

 <!-- Kontaktinė forma -->
    <SimpleContactForm/>

  </section>

