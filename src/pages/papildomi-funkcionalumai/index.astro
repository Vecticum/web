    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const filter = button.getAttribute('data-filter');

        // Update active button
        filterButtons.forEach(btn => {
          btn.classList.remove('active', 'bg-[#3C7099]', 'text-white');
          btn.classList.add('text-[#3C7099]', 'border-[#3C7099]');
        });
        button.classList.add('active', 'bg-[#3C7099]', 'text-white');
        button.classList.remove('text-[#3C7099]');

        // Filter cards
        featureCards.forEach(card => {
          const htmlCard = card as HTMLElement;
          if (filter === 'all' || card.getAttribute('data-category') === filter) {
            htmlCard.style.display = 'block';
            setTimeout(() => {
              htmlCard.style.opacity = '1';
              htmlCard.style.transform = 'scale(1)';
            }, 10);
          } else {
            htmlCard.style.opacity = '0';
            htmlCard.style.transform = 'scale(0.95)';
            setTimeout(() => {
              htmlCard.style.display = 'none';
            }, 300);
          }
        });
      });
    });
