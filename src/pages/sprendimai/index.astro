<MainLayout>
  <div class="container py-8 sm:py-16 md:py-20 mx-auto mb-8">
    <h1
      class="mx-auto mt-2 text-center text-4xl font-semibold tracking-normal text-balance text-gray-950 sm:text-5xl"
    >
      Sprendimai
    </h1>
  </div>
  <div
    class="space-y-8 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-8 sm:mb-16 md:mb-20"
  >
    <h2 class="font-semibold text-xl md:text-2xl lg:text-4xl capitalize">
      Personalo valdymas
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
      {
        services1.map((service) => (
          <a
            class="relative group overflow-hidden transform transition-transform duration-300 hover:scale-105"
            href={service.href}
            data-astro-reload
          >
            <div class="absolute inset-px rounded-lg bg-white shadow-sm transition-shadow duration-300 group-hover:shadow-lg" />
            <div class="relative flex flex-col h-full overflow-hidden rounded-[calc(var(--radius-lg)+1px)] p-6">
              <div class="text-3xl mb-4">{service.icon}</div>
              <h3 class="text-lg font-semibold tracking-tight text-gray-950">
                {service.name}
              </h3>
              {/* <p class="mt-2 text-sm/6 text-gray-600">{service.description}</p> */}
            </div>
            <div class="pointer-events-none absolute inset-px rounded-lg ring-1 shadow-sm ring-black/5" />
          </a>
        ))
      }
    </div>
  </div>
  <div class="bg-[#EBEFF3] py-2 sm:py-3 mb-8">
    <div
      class="space-y-8 pt-8 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 sm:mb-16 md:mb-20 mb-8"
    >
      <h2 class="font-semibold text-xl md:text-2xl lg:text-4xl capitalize">
        Dokumentų valdymas
      </h2>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
        {
          services2.map((service) => (
            <a
              class="relative group overflow-hidden transform transition-transform duration-300 hover:scale-105"
              href={service.href}
              data-astro-reload
            >
