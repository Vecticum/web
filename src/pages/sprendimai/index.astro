---
import MainLayout from "../../layouts/MainLayout.astro";

const categories = [
  {
    name: "Darbuotojų įdarbinimas/išdarbinimas",
    services: [
      { name: "Atrankų valdymas", href: "/atrankos-valdymas/", icon: "👥" },
      { name: "Darbuotojo įdarbinimo savitarna", href: "/darbuotoju-idarbinimo-savitarna/", icon: "🆕" },
      { name: "Darbo sutarčių valdymas", href: "/darbo-sutarciu-valdymas/", icon: "📄" },
      { name: "Darbo vietos paruošimas", href: "/darbuotojo-idarbinimo-i-imone-valdymas/", icon: "💼" },
      { name: "Bandomojo laikotarpio valdymas", href: "/bandomojo-laikotarpio-vertinimas-valdymas/", icon: "📋" },
      { name: "Darbuotojo išdarbinimo valdymas", href: "/darbuotojo-isdarbinimo-is-imones-valdymas/", icon: "🚪" },
    ],
  },
  {
    name: "Darbuotojo informacijos valdymas",
    services: [
      { name: "Darbuotojo duomenų valdymas", href: "/darbuotoju-duomenu-bazes-valdymas/", icon: "📊" },
      { name: "Išduodamo inventoriaus valdymas", href: "/isduodamo-inventoriaus-darbuotojui-valdymas/", icon: "🔧" },
      { name: "Intranetas (Įmonės naujienos)", href: "/intraneto-valdymas/", icon: "📰" },
      { name: "Darbuotojų prašymų valdymas", href: "/darbuotoju-prasymu-valdymas/", icon: "📝" },
    ],
  },
  {
    name: "Darbo laiko apskaita",
    services: [
      { name: "Atostogų prašymų ir kitų nebuvimų valdymas", href: "/atostogu-valdymas/", icon: "🌴" },
      { name: "Komandiruočių valdymas", href: "/komandiruociu-valdymas/", icon: "✈️" },
      { name: "Darbo laiko apskaitos žiniaraščiai", href: "/darbo-grafiku-ir-darbo-laiko-apskaitos-ziniarasciu-valdymas/", icon: "📅" },
    ],
  },
  {
    name: "Atitikimo valdymas",
    services: [
      { name: "Privalomo supažindinimo su dokumentais valdymas", href: "/privalomo-supazindinimo-su-dokumentais-valdymas/", icon: "📚" },
      { name: "Darbuotojų testavimas", href: "/testavimo-is-norminiu-dokumentu-valdymas/", icon: "✍️" },
      { name: "Mokymų valdymas", href: "/mokymu-valdymas/", icon: "🎓" },
      { name: "Veiklos vertinimas", href: "/veiklos-vertinimas/", icon: "📈" },
    ],
  },
  {
    name: "Dokumentų valdymas",
    services: [
      { name: "Dokumentų valdymas", href: "/dokumumentu-valdymas/", icon: "📑" },
      { name: "Dokumentacijos plano valdymas", href: "/dokumentacijos-plano-valdymas/", icon: "🗂️" },
      { name: "Gaunamos/siunčiamos korespondencijos valdymas", href: "/gaunamu-uzklausu-valdymas/", icon: "📨" },
    ],
  },
  {
    name: "Sutarčių valdymas",
    services: [
      { name: "Sutarčių valdymas", href: "/sutarciu-valdymas/", icon: "📎" },
    ],
  },
  {
    name: "Apskaitomų dokumentų valdymas",
    services: [
      { name: "Gaunamų sąskaitų valdymas", href: "/gaunamu-saskaitu-valdymas/", icon: "💳" },
      { name: "Avansinės apyskaitos valdymas", href: "/avansines-apyskaitos-valdymas/", icon: "💰" },
      { name: "Kelionės lapų valdymas", href: "/keliones-lapu-valdymas", icon: "🛣️" },
      { name: "Komandiruočių valdymas", href: "/komandiruociu-valdymas/", icon: "✈️" },
    ],
  },
  {
    name: "Pirkimų valdymas",
    services: [
      { name: "Pirkimų valdymas", href: "/pirkimu-valdymas/", icon: "🛍️" },
    ],
  },
];
---

<MainLayout>
  <section class="bg-[#F8FAFC] py-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <h1 class="text-4xl sm:text-5xl font-bold text-center text-gray-900 mb-16">Sistemos sprendimai</h1>

      <div class="space-y-24">
        {categories.map((category, idx) => (
          <div>
            <h2 class="text-2xl sm:text-3xl font-semibold mb-6 text-center text-[#3C7099]">{category.name}</h2>
            <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
              {category.services.map(service => (
                <li class="bg-white rounded-xl p-6 shadow hover:shadow-md transition group text-center flex flex-col items-center">
                  <div class="text-4xl mb-4 group-hover:scale-110 transition-transform">{service.icon}</div>
                  <a href={service.href} class="text-base font-medium text-gray-800 group-hover:text-[#3C7099] transition-colors">{service.name}</a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>
</MainLayout>
