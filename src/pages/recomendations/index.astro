---
import { getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";
import { Image } from "astro:assets";

const recommendations = await getCollection("recomendations");

export const prerender = true;
---

<MainLayout>
  <div class="w-full py-8 sm:py-16 md:py-20">
    <h1
      class="mt-2 w-full text-center text-4xl font-semibold tracking-normal text-balance text-gray-950 sm:text-5xl"
    >
      Rekomendacijos
    </h1>
    <p class="mt-4 text-center text-lg text-gray-600">
      Mūsų klientų atsiliepimai ir rekomendacijos
    </p>
  </div>
  <div
    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-8 sm:mb-16 md:mb-20"
  >
    {
      recommendations.map((recommendation) => (
        <div class="border group flex flex-col border-gray-200 rounded-lg overflow-hidden bg-white shadow-md hover:shadow-lg transition-shadow duration-300">
          <div class="h-48 overflow-hidden">
            <img
              src={recommendation.data.image}
              alt={recommendation.data.title}
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
            />
          </div>
          <div class="p-6 flex flex-col flex-grow">
            <h2 class="text-xl font-semibold text-gray-950 mb-2">
              {recommendation.data.title}
            </h2>
            <p class="text-gray-600 mb-4 flex-grow">
              {recommendation.data.description}
            </p>
            <a
              href={recommendation.data.link}
              class="mt-auto inline-flex items-center text-accent hover:text-accent-dark"
            >
              Skaityti daugiau
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 ml-1"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path
                  fill-rule="evenodd"
                  d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"
                />
              </svg>
            </a>
          </div>
        </div>
      ))
    }
  </div>
</MainLayout>
