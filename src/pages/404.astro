---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="404 Not Found">
  <section class="flex items-center p-16 bg-gray-100">
    <div class="container flex flex-col items-center">
      <div class="flex flex-col gap-6 max-w-md text-center">
        <h2 class="font-extrabold text-9xl text-gray-600">
          <span class="sr-only">Error</span>404
        </h2>
        <p class="text-2xl md:text-3xl text-gray-600">
          Sorry, we couldn't find this page.
        </p>
        <a
          href="/"
          class="px-8 py-2 text-base rounded bg-accent text-gray-50 hover:text-gray-200"
          >Back to home</a
        >
      </div>
    </div>
  </section>
</MainLayout>
