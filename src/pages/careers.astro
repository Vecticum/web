---
import { getCollection } from "astro:content";
import MainLayout from "../layouts/MainLayout.astro";

const careers = await getCollection("careers");
---

<MainLayout>
  <div class="py-8 sm:py-16 md:py-20">
    <h1
      class="mx-auto mt-2 max-w-lg text-center text-4xl font-semibold tracking-normal text-balance text-gray-950 sm:text-5xl"
    >
      Careers
    </h1>
    <div
      class="space-y-8 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-8 sm:mb-16 md:mb-20 mt-8 sm:mt-16"
    >
      {
        careers.map((career) => (
          <div class="border group flex flex-col sm:gap-4 border-gray-200 rounded-lg p-4 bg-white-100 justify-center items-center gap-2 shadow-md">
            <h2 class="text-xl font-semibold text-gray-950">
              {career.data.title}
            </h2>
            <p class="text-sm text-gray-600">{career.data.location}</p>
            <p class="mt-2 text-sm text-gray-600">{career.data.description}</p>
            <a
              href={career.data.applyLink}
              class="mt-4 inline-block rounded-md bg-accent px-5 py-2.5 text-base font-medium text-white shadow"
            >
              Apply Now
            </a>
          </div>
        ))
      }
    </div>
  </div>
</MainLayout>
